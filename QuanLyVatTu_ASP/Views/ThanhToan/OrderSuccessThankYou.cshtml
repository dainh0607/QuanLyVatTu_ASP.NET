@using QuanLyVatTu_ASP.Models.ViewModels
@using QuanLyVatTu_ASP.Areas.Admin.Models
@{
    Layout = null;
    
    // Deserialize DonHang
    var donHangJson = TempData["DonHangJson"] as string;
    var donHang = !string.IsNullOrEmpty(donHangJson) 
        ? Newtonsoft.Json.JsonConvert.DeserializeObject<DonHang>(donHangJson) 
        : (TempData["DonHang"] as DonHang); // Fallback

    // Deserialize CartItems
    var cartItemsJson = TempData["CartItemsJson"] as string;
    var cartItems = !string.IsNullOrEmpty(cartItemsJson)
        ? Newtonsoft.Json.JsonConvert.DeserializeObject<List<CartItem>>(cartItemsJson)
        : (TempData["CartItems"] as List<CartItem>); // Fallback

    var paymentMethod = TempData["PaymentMethod"]?.ToString() ?? "cod";
    var shippingMethod = TempData["ShippingMethod"]?.ToString() ?? "delivery";

    // Parse decimals from strings (fix for TempData serialization issue)
    decimal.TryParse(TempData["SoTienDatCoc"]?.ToString(), out decimal soTienDatCoc);
    var isDeposit = soTienDatCoc > 0;

    decimal.TryParse(TempData["TongTien"]?.ToString(), out decimal tongTien);
    if (tongTien == 0) tongTien = donHang?.TongTien ?? 0;
    
    var finalAmount = isDeposit ? soTienDatCoc : tongTien; // Add finalAmount logic here too checking usage below
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Đặt hàng thành công - Quản lý vật tư</title>
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/user/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    
    <style>
        :root {
            --success-green: #10b981;
            --success-light: #d1fae5;
            --gray-50: #f9fafb;
            --gray-100: #f3f4f6;
            --gray-200: #e5e7eb;
            --gray-500: #6b7280;
            --gray-700: #374151;
            --gray-900: #111827;
        }
        
        * { box-sizing: border-box; }
        
        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
            background: linear-gradient(135deg, #f0fdf4 0%, #ecfdf5 100%);
            min-height: 100vh;
            margin: 0;
            padding: 0;
        }
        
        .success-container {
            max-width: 800px;
            margin: 0 auto;
            padding: 40px 20px;
        }
        
        /* Header */
        .success-header {
            text-align: center;
            margin-bottom: 32px;
        }
        
        .success-icon-wrapper {
            width: 100px;
            height: 100px;
            background: var(--success-light);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 20px;
            animation: bounceIn 0.6s ease-out;
        }
        
        .success-icon {
            font-size: 50px;
            color: var(--success-green);
        }
        
        .success-title {
            font-size: 1.75rem;
            font-weight: 700;
            color: var(--gray-900);
            margin: 0 0 8px 0;
        }
        
        .success-subtitle {
            color: var(--gray-500);
            font-size: 1rem;
            margin: 0;
        }
        
        /* Order Card */
        .order-card {
            background: white;
            border-radius: 16px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            overflow: hidden;
            margin-bottom: 24px;
        }
        
        .order-card-header {
            background: linear-gradient(135deg, var(--success-green), #059669);
            color: white;
            padding: 20px 24px;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }
        
        .order-number {
            font-size: 1.1rem;
            font-weight: 600;
        }
        
        .order-date {
            font-size: 0.9rem;
            opacity: 0.9;
        }
        
        .order-card-body {
            padding: 24px;
        }
        
        /* Info Grid */
        .info-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 20px;
            margin-bottom: 24px;
        }
        
        .info-item {
            padding: 16px;
            background: var(--gray-50);
            border-radius: 10px;
        }
        
        .info-label {
            font-size: 0.8rem;
            color: var(--gray-500);
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-bottom: 4px;
        }
        
        .info-value {
            font-weight: 600;
            color: var(--gray-900);
        }
        
        /* Product List */
        .products-section {
            border-top: 1px solid var(--gray-200);
            padding-top: 20px;
        }
        
        .section-title {
            font-weight: 600;
            color: var(--gray-900);
            margin-bottom: 16px;
            display: flex;
            align-items: center;
            gap: 8px;
        }
        
        .product-list {
            display: flex;
            flex-direction: column;
            gap: 12px;
        }
        
        .product-item {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 12px;
            background: var(--gray-50);
            border-radius: 10px;
        }
        
        .product-thumb {
            width: 60px;
            height: 60px;
            border-radius: 8px;
            object-fit: cover;
            background: var(--gray-200);
        }
        
        .product-info {
            flex: 1;
        }
        
        .product-name {
            font-weight: 600;
            color: var(--gray-900);
            margin-bottom: 2px;
        }
        
        .product-meta {
            font-size: 0.85rem;
            color: var(--gray-500);
        }
        
        .product-price {
            font-weight: 700;
            color: var(--gray-900);
            text-align: right;
        }
        
        /* Summary */
        .order-summary {
            border-top: 1px solid var(--gray-200);
            padding-top: 20px;
            margin-top: 20px;
        }
        
        .summary-row {
            display: flex;
            justify-content: space-between;
            padding: 8px 0;
            font-size: 0.95rem;
        }
        
        .summary-row.total {
            border-top: 2px solid var(--gray-200);
            margin-top: 12px;
            padding-top: 16px;
            font-size: 1.1rem;
            font-weight: 700;
        }
        
        .summary-row.total .amount {
            color: #ef4444;
        }
        
        /* Actions */
        .action-buttons {
            display: flex;
            gap: 16px;
            justify-content: center;
            margin-top: 32px;
        }
        
        .btn-action {
            padding: 14px 28px;
            border-radius: 10px;
            font-weight: 600;
            font-size: 0.95rem;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            transition: all 0.2s ease;
        }
        
        .btn-primary-action {
            background: linear-gradient(135deg, #fbbf24, #f59e0b);
            color: #1a1a2e;
            border: none;
        }
        
        .btn-primary-action:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(245, 158, 11, 0.35);
            color: #1a1a2e;
        }
        
        .btn-secondary-action {
            background: white;
            color: var(--gray-700);
            border: 2px solid var(--gray-200);
        }
        
        .btn-secondary-action:hover {
            border-color: var(--gray-300);
            background: var(--gray-50);
            color: var(--gray-900);
        }
        
        /* Note Box */
        .note-box {
            background: #fffbeb;
            border: 1px solid #fcd34d;
            border-radius: 10px;
            padding: 16px;
            margin-top: 20px;
            display: flex;
            align-items: flex-start;
            gap: 12px;
        }
        
        .note-box i {
            color: #f59e0b;
            font-size: 1.25rem;
            margin-top: 2px;
        }
        
        .note-box p {
            margin: 0;
            color: #92400e;
            font-size: 0.9rem;
        }
        
        /* Animation */
        @@keyframes bounceIn {
            0% { transform: scale(0.3); opacity: 0; }
            50% { transform: scale(1.05); }
            70% { transform: scale(0.9); }
            100% { transform: scale(1); opacity: 1; }
        }
        
        /* Responsive */
        @@media (max-width: 576px) {
            .info-grid {
                grid-template-columns: 1fr;
            }
            
            .action-buttons {
                flex-direction: column;
            }
            
            .btn-action {
                width: 100%;
                justify-content: center;
            }
        }
    </style>
</head>
<body>
    <div class="success-container">
        <!-- Header -->
        <div class="success-header">
            <div class="success-icon-wrapper">
                <i class="fas fa-check success-icon"></i>
            </div>
            <h1 class="success-title">Đặt hàng thành công!</h1>
            <p class="success-subtitle">Cảm ơn bạn đã mua hàng tại cửa hàng vật tư</p>
        </div>
        
        <!-- Order Card -->
        <div class="order-card">
            <div class="order-card-header">
                <span class="order-number">
                    <i class="fas fa-receipt me-2"></i>
                    Đơn hàng #@(donHang?.ID ?? 0)
                </span>
                <span class="order-date">
                    <i class="far fa-calendar-alt me-1"></i>
                    @DateTime.Now.ToString("dd/MM/yyyy HH:mm")
                </span>
            </div>
            
            <div class="order-card-body">
                <!-- Info Grid -->
                <div class="info-grid">
                    <div class="info-item">
                        <div class="info-label">Phương thức thanh toán</div>
                        <div class="info-value">
                            @if(paymentMethod == "cod")
                            {
                                <i class="fas fa-money-bill-wave text-success me-1"></i>
                                <text>Thanh toán khi nhận hàng</text>
                            }
                            else
                            {
                                <i class="fas fa-building-columns text-primary me-1"></i>
                                <text>Chuyển khoản ngân hàng</text>
                            }
                        </div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Phương thức vận chuyển</div>
                        <div class="info-value">
                            @if(shippingMethod == "pickup")
                            {
                                <i class="fas fa-store text-warning me-1"></i>
                                <text>Nhận tại cửa hàng</text>
                            }
                            else
                            {
                                <i class="fas fa-truck text-primary me-1"></i>
                                <text>Giao hàng tận nơi</text>
                            }
                        </div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Trạng thái đơn hàng</div>
                        <div class="info-value">
                            <span class="badge bg-warning text-dark">Chờ xác nhận</span>
                        </div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Dự kiến giao hàng</div>
                        <div class="info-value">
                            @if(shippingMethod == "pickup")
                            {
                                <text>Có thể nhận ngay</text>
                            }
                            else
                            {
                                <text>1-3 ngày làm việc</text>
                            }
                        </div>
                    </div>
                </div>
                
                <!-- Products -->
                @if(cartItems != null && cartItems.Any())
                {
                    <div class="products-section">
                        <h4 class="section-title">
                            <i class="fas fa-box"></i>
                            Sản phẩm đã đặt (@cartItems.Count sản phẩm)
                        </h4>
                        <div class="product-list">
                            @foreach(var item in cartItems)
                            {
                                <div class="product-item">
                                    <img src="@item.HinhAnh" alt="@item.TenVatTu" class="product-thumb">
                                    <div class="product-info">
                                        <div class="product-name">@item.TenVatTu</div>
                                        <div class="product-meta">Số lượng: @item.SoLuong • @item.DonGia.ToString("N0")₫/@item.DonViTinh</div>
                                    </div>
                                    <div class="product-price">@item.ThanhTien.ToString("N0")₫</div>
                                </div>
                            }
                        </div>
                        
                        <!-- Summary -->
                        <div class="order-summary">
                            <div class="summary-row">
                                <span>Tạm tính</span>
                                <span>@cartItems.Sum(x => x.ThanhTien).ToString("N0")₫</span>
                            </div>
                            <div class="summary-row">
                                <span>Phí vận chuyển</span>
                                <span>@(shippingMethod == "pickup" ? "Miễn phí" : "Liên hệ sau")</span>
                            </div>
                            <div class="summary-row total">
                                <span>Tổng cộng</span>
                                <span class="amount">@(donHang?.TongTien?.ToString("N0") ?? cartItems.Sum(x => x.ThanhTien).ToString("N0"))₫</span>
                            </div>
                        </div>
                    </div>
                }
                
                <!-- Note -->
                <div class="note-box">
                    <i class="fas fa-info-circle"></i>
                    <p>Nhân viên sẽ liên hệ xác nhận đơn hàng và thông báo phí vận chuyển trong thời gian sớm nhất. Vui lòng giữ điện thoại để tiện liên lạc.</p>
                </div>
            </div>
        </div>
        
        <!-- Action Buttons -->
        <div class="action-buttons">
            <a href="/Customer/Orders" class="btn-action btn-secondary-action">
                <i class="fas fa-list-ul"></i>
                Xem đơn hàng
            </a>
            <a href="/SanPham" class="btn-action btn-primary-action">
                <i class="fas fa-shopping-cart"></i>
                Tiếp tục mua sắm
            </a>
        </div>
    </div>
    
    <script src="~/user/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
