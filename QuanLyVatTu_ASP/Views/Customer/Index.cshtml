@model IEnumerable<QuanLyVatTu_ASP.Areas.Admin.Models.VatTu>
@{
    ViewData["Title"] = "Trang Chủ - QLVT";
    Layout = "~/Views/Shared/_Layout_Customer.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/user/css/site.css" />
}

<section class="hero">
    <div class="container">
        <h1>Vật Tư Chất Lượng - Giá Tốt Nhất</h1>
        <p>Chuyên cung cấp vật tư, thiết bị công nghiệp và dụng cụ chuyên nghiệp</p>
        <a href="/SanPham" class="btn-primary">Mua sắm ngay</a>
    </div>
</section>

<section class="popular-products">
    <div class="container">
        <h2 class="section-title">Sản phẩm nổi bật</h2>
        <div class="products-grid">
            @if (Model != null && Model.Any())
            {
                foreach (var product in Model)
                {
                    <div class="product-card">
                        <div class="product-image">
                            <a href="@Url.Action("Detail", "SanPham", new { id = product.ID })">

                            </a>

                            @if (product.SoLuongTon == 0)
                            {
                                <div class="product-badge out-of-stock">Hết hàng</div>
                            }
                            else
                            {
                                <div class="product-badge sale">Mới</div>
                            }
                        </div>
                        <div class="product-info">
                            <h3 class="product-name">
                                <a href="@Url.Action("Detail", "SanPham", new { id = product.ID })">@product.TenVatTu</a>
                            </h3>
                            <div class="product-category">@product.LoaiVatTu?.TenLoaiVatTu</div>
                            <div class="product-price">
                                <span class="current-price">@product.GiaBan.ToString("N0")đ</span>
                            </div>
                            <div class="product-stock">
                                @if (product.SoLuongTon > 0)
                                {
                                    <span class="in-stock">Còn @product.SoLuongTon @product.DonViTinh</span>
                                }
                                else
                                {
                                    <span class="out-of-stock">Hết hàng</span>
                                }
                            </div>
                            <div class="product-actions">
                                <a href="@Url.Action("Detail", "SanPham", new { id = product.ID })" class="view-details-btn">Xem chi tiết</a>

                                @if (product.SoLuongTon > 0)
                                {
                                    <button class="add-to-cart-btn" onclick="addToCartIndex(@product.ID)">
                                        <i class="fas fa-shopping-cart"></i>
                                    </button>
                                }
                                else
                                {
                                    <button class="add-to-cart-btn" disabled>
                                        <i class="fas fa-shopping-cart"></i>
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <p class="no-products">Hiện chưa có sản phẩm nổi bật.</p>
            }
        </div>
        <div class="text-center mt-4">
            <a href="/SanPham" class="btn-secondary">Xem tất cả sản phẩm</a>
        </div>
    </div>
</section>


    <script>
        function addToCartIndex(id) {
             $.post('/GioHang/AddToCart', { productId: id, quantity: 1 }, function(res) {
                if(res.success) alert(res.message);
            });
        }
    </script>
