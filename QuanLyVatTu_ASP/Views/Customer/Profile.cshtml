@using QuanLyVatTu_ASP.Models.ViewModels
@model ProfileViewModel
@{
    ViewData["Title"] = "Tài khoản của tôi";
    Layout = "~/Views/Shared/_Layout_Customer.cshtml";
}


    <link rel="stylesheet" href="~/user/css/profile.css" />


<div class="profile-page">
    <div class="container">
        <div class="page-header">
            <h1>Tài khoản của tôi</h1>
            <p>Xin chào, @Model.KhachHang.HoTen</p>
        </div>

        <div class="profile-content">
            <div class="profile-sidebar">
                <div class="user-info-card">
                    <div class="user-avatar">
                        <div class="avatar-placeholder">
                            <i class="fas fa-user-circle"></i>
                        </div>
                        <div class="user-details">
                            <h3>@Model.KhachHang.HoTen</h3>
                            <p>Mã KH: @Model.KhachHang.MaHienThi</p>
                        </div>
                    </div>

                    <div class="user-stats">
                        <div class="stat-item">
                            <div class="stat-number">@Model.SoDonHang</div>
                            <div class="stat-label">Đơn hàng</div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-number">@Model.TongTienMua.ToString("N0")đ</div>
                            <div class="stat-label">Tổng chi</div>
                        </div>
                    </div>
                </div>

                <nav class="profile-nav">
                    <a href="#profile" class="nav-link active" onclick="switchTab('profile')">
                        <i class="fas fa-user"></i> Thông tin tài khoản
                    </a>
                    <a href="#orders" class="nav-link" onclick="switchTab('orders')">
                        <i class="fas fa-shopping-bag"></i> Đơn hàng (@Model.SoDonHang)
                    </a>
                    <a href="@Url.Action("Logout", "Account")" class="nav-link logout">
                        <i class="fas fa-sign-out-alt"></i> Đăng xuất
                    </a>
                </nav>
            </div>

            <div class="profile-main">

                <div class="tab-content active" id="tab-profile">
                    <div class="tab-header">
                        <h2>Thông tin cá nhân</h2>
                    </div>

                    <div class="profile-form-container">
                        <form>
                            <div class="form-group">
                                <label>Họ và tên</label>
                                <input type="text" value="@Model.KhachHang.HoTen" class="form-control" readonly>
                            </div>
                            <div class="form-group">
                                <label>Email</label>
                                <input type="email" value="@Model.KhachHang.Email" class="form-control" readonly>
                            </div>
                            <div class="form-group">
                                <label>Số điện thoại</label>
                                <input type="text" value="@Model.KhachHang.SoDienThoai" class="form-control" readonly>
                            </div>
                            <div class="form-group">
                                <label>Địa chỉ</label>
                                <textarea class="form-control" readonly>@Model.KhachHang.DiaChi</textarea>
                            </div>
                        </form>
                    </div>

                    <div class="mt-5">
                        <h3>Đổi mật khẩu</h3>
                        <form id="changePassForm" method="post" action="@Url.Action("ChangePassword", "Customer")">
                            <input type="hidden" name="Id" value="@Model.KhachHang.ID" />
                            <div class="form-group">
                                <label>Mật khẩu cũ</label>
                                <input type="password" name="MatKhauCu" class="form-control" required>
                            </div>
                            <div class="form-group">
                                <label>Mật khẩu mới</label>
                                <input type="password" name="MatKhauMoi" class="form-control" required>
                            </div>
                            <button type="submit" class="btn btn-primary mt-3">Lưu mật khẩu</button>
                        </form>
                    </div>
                </div>

                <div class="tab-content" id="tab-orders" style="display:none;">
                    <div class="tab-header">
                        <h2>Lịch sử đơn hàng</h2>
                    </div>

                    <div class="orders-list">
                        @if (Model.DonHangs != null && Model.DonHangs.Any())
                        {
                            foreach (var order in Model.DonHangs)
                            {
                                <div class="order-card p-3 mb-3 border rounded">
                                    <div class="order-header d-flex justify-content-between">
                                        <div>
                                            <h4 class="mb-1">Đơn hàng #@order.ID</h4>
                                            <span class="text-muted small">@order.NgayDat.ToString("dd/MM/yyyy HH:mm")</span>
                                        </div>
                                        <div>
                                            <span class="badge @GetStatusClass(order.TrangThai)">@order.TrangThai</span>
                                        </div>
                                    </div>

                                    <div class="order-total mt-2">
                                        <strong>Tổng tiền: <span class="text-primary">@order.TongTien.ToString("N0")đ</span></strong>
                                    </div>

                                    <div class="order-items mt-2 bg-light p-2 rounded">
                                        @if (order.ChiTietDonHangs != null)
                                        {
                                            foreach (var ct in order.ChiTietDonHangs)
                                            {
                                                <div class="d-flex justify-content-between small">
                                                    <span>@ct.VatTu?.TenVatTu x @ct.SoLuong</span>
                                                    <span>@ct.ThanhTien.ToString("N0")đ</span>
                                                </div>
                                            }
                                        }
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="text-center py-5">
                                <p>Bạn chưa có đơn hàng nào.</p>
                                <a href="/SanPham" class="btn btn-primary">Mua sắm ngay</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


    <script>
        function switchTab(tabName) {
            document.getElementById('tab-profile').style.display = 'none';
            document.getElementById('tab-orders').style.display = 'none';

            document.getElementById('tab-' + tabName).style.display = 'block';

            $('.nav-link').removeClass('active');
            event.currentTarget.classList.add('active');
        }

        $('#changePassForm').submit(function(e){
            e.preventDefault();
            var form = $(this);
            $.post(form.attr('action'), form.serialize(), function(res){
                if(res.success){
                    alert('Đổi mật khẩu thành công!');
                    form[0].reset();
                } else {
                    alert('Lỗi: ' + res.message);
                }
            });
        });
    </script>


@functions {
    public string GetStatusClass(string status)
    {
        return status switch
        {
            "Moi" => "bg-info text-white",
            "Chờ xử lý" => "bg-warning text-dark",
            "DaGiao" => "bg-success text-white",
            "Huy" => "bg-danger text-white",
            _ => "bg-secondary text-white"
        };
    }
}