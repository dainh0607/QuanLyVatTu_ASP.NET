<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MaterialPro - Vật tư chuyên nghiệp</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="~/user/css/site.css" rel="stylesheet">

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header class="header">
        <nav class="navbar">
            <div class="container flex-between">
                <div class="nav-brand">
                    <a asp-controller="Home" asp-action="Index" class="logo">
                        <i class="fas fa-tools"></i>
                        <span>MaterialPro</span>
                    </a>
                </div>

                <div class="nav-search">
                    <form class="search-form">
                        <input type="text" placeholder="Tìm kiếm vật tư, thiết bị..." class="search-input">
                        <button type="submit" class="search-btn">
                            <i class="fas fa-search"></i>
                        </button>
                    </form>
                </div>
                <ul class="nav-menu">
                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="Index" class="nav-link active">
                            <i class="fas fa-home"></i>
                            <span>Trang chủ</span>
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a href="#" class="nav-link">
                            <i class="fas fa-boxes"></i>
                            <span>Danh mục</span>
                            <i class="fas fa-chevron-down"></i>
                        </a>
                        <div class="dropdown-menu">
                            <a href="#" class="dropdown-item">Loại hàng 1</a>
                            <a href="#" class="dropdown-item">Loại hàng 2</a>
                            <a href="#" class="dropdown-item">Loại hàng 3</a>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link">
                            <i class="fas fa-fire"></i>
                            <span>Khuyến mãi</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link">
                            <i class="fas fa-info-circle"></i>
                            <span>Về chúng tôi</span>
                        </a>
                    </li>
                </ul>

                <div class="nav-actions">
                    <button class="action-btn cart-btn">
                        <i class="fas fa-shopping-cart"></i>
                        <span class="cart-count">3</span>
                    </button>
                    <button class="action-btn user-btn">
                        <i class="fas fa-user"></i>
                    </button>
                </div>

                <button class="mobile-menu-btn">
                    <i class="fas fa-bars"></i>
                </button>
            </div>
        </nav>
    </header>

    <!-- MAIN CONTENT -->
    <main role="main">
        @RenderBody()
    </main>

    <footer class="footer">
        <div class="container">
            <div class="footer-content">
                <div class="footer-section">
                    <div class="footer-logo">
                        <i class="fas fa-tools"></i>
                        <span>MaterialPro</span>
                    </div>
                    <p class="footer-description">
                        Chuyên cung cấp vật tư, thiết bị và dụng cụ công nghiệp chất lượng cao.
                        Đối tác tin cậy cho mọi công trình.
                    </p>
                    <div class="social-links">
                        <a href="#" class="social-link"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="social-link"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="social-link"><i class="fab fa-linkedin-in"></i></a>
                        <a href="#" class="social-link"><i class="fab fa-youtube"></i></a>
                    </div>
                </div>

                <div class="footer-section">
                    <h3 class="footer-title">Liên kết nhanh</h3>
                    <ul class="footer-links">
                        <li><a href="#">Trang chủ</a></li>
                        <li><a href="#">Sản phẩm</a></li>
                        <li><a href="#">Khuyến mãi</a></li>
                        <li><a href="#">Tin tức</a></li>
                        <li><a href="#">Liên hệ</a></li>
                    </ul>
                </div>

                <div class="footer-section">
                    <h3 class="footer-title">Danh mục</h3>
                    <ul class="footer-links">
                    </ul>
                </div>

                <div class="footer-section">
                    <h3 class="footer-title">Liên hệ</h3>
                    <div class="contact-info">
                        <div class="contact-item">
                            <i class="fas fa-map-marker-alt"></i>
                            <span>123 Đường ABC, Quận 1, TP.HCM</span>
                        </div>
                        <div class="contact-item">
                            <i class="fas fa-phone"></i>
                            <span>+84 28 1234 5678</span>
                        </div>
                        <div class="contact-item">
                            <i class="fas fa-envelope"></i>
                            <span>info@materialpro.vn</span>
                        </div>
                        <div class="contact-item">
                            <i class="fas fa-clock"></i>
                            <span>Thứ 2 - Thứ 7: 8:00 - 18:00</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="footer-bottom">
                <div class="footer-bottom-content">
                    <p>&copy; 2024 QLVT. Tất cả quyền được bảo lưu.</p>
                    <div class="footer-bottom-links">
                        <a href="#">Chính sách bảo mật</a>
                        <a href="#">Điều khoản sử dụng</a>
                        <a href="#">Chính sách vận chuyển</a>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/user/js/site.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>