@model List<QuanLyVatTu_ASP.Models.ViewModels.WishlistItem>
@{
    ViewData["Title"] = "Danh sách yêu thích";

}

<div class="container py-5 px-4 px-lg-5">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
            <li class="breadcrumb-item active">Danh sách yêu thích</li>
        </ol>
    </nav>

    <div class="d-flex flex-column align-items-center mb-4 text-center">
        <h2 class="mb-0 fw-bold">
            Sản phẩm yêu thích
            @if (Model.Any())
            {
                <span class="badge bg-danger ms-2 rounded-pill">@Model.Count</span>
            }
        </h2>
    </div>

    @if (Model.Any())
    {
        <div class="row g-4 justify-content-center">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4 col-xl-3">
                    <div class="card h-100 shadow-sm wishlist-card" data-product-id="@item.VatTuId">
                        <div class="position-relative">
                            <img src="@item.HinhAnh" class="card-img-top" alt="@item.TenVatTu" 
                                 style="height: 180px; object-fit: cover;">
                            <button class="btn btn-danger btn-sm position-absolute top-0 end-0 m-2 remove-wishlist-btn"
                                    onclick="removeFromWishlist(@item.VatTuId)" title="Xóa khỏi yêu thích">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                        <div class="card-body d-flex flex-column">
                            <h6 class="card-title fw-bold mb-2" style="min-height: 48px;">
                                <a href="/SanPham/ProductDetail/@item.VatTuId" class="text-decoration-none text-dark">
                                    @item.TenVatTu
                                </a>
                            </h6>
                            <p class="text-danger fw-bold fs-5 mb-3">@item.DonGia.ToString("N0")đ</p>
                            <small class="text-muted mb-3">
                                <i class="fas fa-clock me-1"></i>
                                Đã thêm: @item.NgayThem.ToString("dd/MM/yyyy")
                            </small>
                            <div class="mt-auto d-grid gap-2">
                                <button class="btn btn-primary" onclick="addToCart(@item.VatTuId)">
                                    <i class="fas fa-shopping-cart me-1"></i> Thêm vào giỏ
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <div class="empty-wishlist mb-4">
                <i class="far fa-heart text-muted" style="font-size: 5rem;"></i>
            </div>
            <h4 class="text-muted mb-3">Danh sách yêu thích trống</h4>
            <p class="text-muted mb-4">Bạn chưa có sản phẩm nào trong danh sách yêu thích</p>
            <a href="/SanPham" class="btn btn-primary btn-lg">
                <i class="fas fa-shopping-bag me-2"></i>
                Khám phá sản phẩm
            </a>
        </div>
    }
</div>

<style>
    .wishlist-card {
        transition: transform 0.2s, box-shadow 0.2s;
        border: none;
        border-radius: 12px;
        overflow: hidden;
    }
    .wishlist-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.12) !important;
    }
    .remove-wishlist-btn {
        border-radius: 50%;
        width: 32px;
        height: 32px;
        padding: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0.9;
        transition: all 0.2s;
    }
    .remove-wishlist-btn:hover {
        opacity: 1;
        transform: scale(1.1);
    }
    .empty-wishlist i {
        animation: heartbeat 1.5s infinite;
    }
    @@keyframes heartbeat {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.05); }
    }
</style>

<script>
    function removeFromWishlist(productId) {
        if (!confirm('Xóa sản phẩm khỏi danh sách yêu thích?')) return;
        
        fetch('/GioHang/RemoveFromWishlist', {
            method: 'POST',
            headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
            body: 'productId=' + productId
        })
        .then(res => res.json())
        .then(data => {
            if (data.success) {
                document.querySelector(`.wishlist-card[data-product-id="${productId}"]`)
                    .closest('.col-md-6').remove();
                
                // Reload if empty
                if (document.querySelectorAll('.wishlist-card').length === 0) {
                    location.reload();
                }
            } else if (data.requireLogin) {
                 if (typeof showGlobalLogin === 'function') {
                    showGlobalLogin(data.message);
                 } else {
                    alert(data.message);
                    window.location.href = '/Account/Login';
                 }
            }
        });
    }

    function addToCart(productId) {
        // Use global function if available or local impl
        if (typeof window.addToCart === 'function') {
            window.addToCart(productId);
        } else {
            // Fallback (old impl)
             fetch('/GioHang/AddToCart?productId=' + productId)
            .then(res => res.json())
            .then(data => {
                if (data.success) {
                    alert('Đã thêm vào giỏ hàng!');
                }
            });
        }
    }

    @if (ViewBag.RequireLogin == true)
    {
        <text>
        document.addEventListener('DOMContentLoaded', function() {
            if (typeof showGlobalLogin === 'function') {
                showGlobalLogin('Vui lòng đăng nhập để xem danh sách yêu thích của bạn.');
            } else {
                // Fallback attempt to open modal directly
                var el = document.getElementById('globalLoginModal');
                if(el && typeof bootstrap !== 'undefined') {
                    new bootstrap.Modal(el).show();
                }
            }
        });
        </text>
    }
</script>
