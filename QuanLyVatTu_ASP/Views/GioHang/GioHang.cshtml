@using QuanLyVatTu_ASP.Models.ViewModels
@model List<CartItem>
@{
    ViewData["Title"] = "Giỏ hàng của bạn";

    
    // Sử dụng Model thực tế
    var cartItems = Model ?? new List<CartItem>();
    
    decimal subtotal = cartItems.Sum(x => x.ThanhTien);
    decimal discount = 0;
    decimal total = subtotal - discount;
}

<div class="cart-page py-5" style="background-color: var(--md-sys-color-surface);">
    <div class="container-fluid px-4 px-lg-5">
        
        @if (cartItems == null || cartItems.Count == 0)
        {
            <!-- Empty Cart State -->
            <div class="text-center py-5">
                <div class="mb-4">
                    <img src="https://cdn-icons-png.flaticon.com/512/11329/11329060.png" alt="Empty Cart" style="width: 150px; opacity: 0.5;">
                </div>
                <h2 class="fw-bold text-secondary mb-3">Giỏ hàng đang trống</h2>
                <p class="text-muted mb-4">Bạn chưa thêm sản phẩm nào vào giỏ hàng.</p>
                <a href="/SanPham" class="btn btn-primary rounded-pill px-5 py-3 fw-bold shadow-sm">
                    <i class="fas fa-search me-2"></i>Khám phá sản phẩm
                </a>
            </div>
        }
        else
        {
            <!-- Breadcrumb -->
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-4">
                    <li class="breadcrumb-item"><a href="/" class="text-decoration-none text-muted small">Trang chủ</a></li>
                    <li class="breadcrumb-item active text-dark fw-bold small" aria-current="page">Giỏ hàng</li>
                </ol>
            </nav>

            <div class="row g-4">
                <!-- Cart Items List -->
                <div class="col-lg-8">
                    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
                        <div class="card-header bg-white py-3 border-bottom">
                            <h5 class="mb-0 fw-bold" style="font-family: 'Google Sans', sans-serif;">Giỏ hàng (@cartItems.Count sản phẩm)</h5>
                        </div>
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table table-hover align-middle mb-0">
                                    <thead class="bg-light text-muted small text-uppercase">
                                        <tr>
                                            <th scope="col" class="ps-4 py-3" style="width: 45%;">Sản phẩm</th>
                                            <th scope="col" class="py-3 text-center" style="width: 15%;">Đơn giá</th>
                                            <th scope="col" class="py-3 text-center" style="width: 15%;">Số lượng</th>
                                            <th scope="col" class="py-3 text-end pe-4" style="width: 20%;">Thành tiền</th>
                                            <th scope="col" style="width: 5%;"></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in cartItems)
                                        {
                                            <tr class="cart-item-row" data-item-id="@item.VatTuId">
                                                <td class="ps-4 py-3">
                                                    <div class="d-flex align-items-center gap-3">
                                                        <a href="/SanPham/ProductDetail/@item.VatTuId" class="d-block flex-shrink-0">
                                                            <div class="bg-light rounded-3 d-flex align-items-center justify-content-center border" style="width: 80px; height: 80px;">
                                                                <img src="@(string.IsNullOrEmpty(item.HinhAnh) ? $"/user/images/{item.TenVatTu}.jpg" : item.HinhAnh)" 
                                                                     alt="@item.TenVatTu" 
                                                                     class="img-fluid p-2" 
                                                                     style="max-width: 100%; max-height: 100%; object-fit: contain;">
                                                            </div>
                                                        </a>
                                                        <div>
                                                            <h6 class="mb-1 fw-bold">
                                                                <a href="/SanPham/ProductDetail/@item.VatTuId" class="text-decoration-none text-dark">@item.TenVatTu</a>
                                                            </h6>
                                                            <small class="text-muted">Mã: @item.VatTuId</small>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td class="text-center text-muted fw-medium">
                                                    @item.DonGia.ToString("N0")đ
                                                </td>
                                                <td class="text-center">
                                                    <div class="input-group input-group-sm d-inline-flex flex-nowrap" style="width: 100px;">
                                                        <button class="btn btn-outline-secondary" type="button" onclick="updateQuantity(@item.VatTuId, -1)">-</button>
                                                        <input type="number" class="form-control text-center qty-input border-secondary" 
                                                               value="@item.SoLuong" min="1" max="99" readonly 
                                                               data-item-id="@item.VatTuId" data-price="@item.DonGia">
                                                        <button class="btn btn-outline-secondary" type="button" onclick="updateQuantity(@item.VatTuId, 1)">+</button>
                                                    </div>
                                                </td>
                                                <td class="text-end pe-4 fw-bold text-primary total-amount">
                                                    @item.ThanhTien.ToString("N0")đ
                                                </td>
                                                <td class="text-end pe-3">
                                                    <button class="btn btn-link text-danger p-0 opacity-50 hover-opacity-100" 
                                                            onclick="confirmRemoveItem(@item.VatTuId, '@item.TenVatTu')" 
                                                            title="Xóa sản phẩm">
                                                        <i class="fas fa-trash-alt"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="card-footer bg-white p-3 border-top-0 d-flex justify-content-between align-items-center">
                            <a href="/SanPham" class="text-decoration-none fw-bold text-primary">
                                <i class="fas fa-arrow-left me-2"></i>Tiếp tục mua sắm
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Order Summary Sidebar -->
                <div class="col-lg-4">
                    <div class="card border-0 shadow-sm rounded-4 mb-4">
                        <div class="card-body p-4">
                            <h5 class="fw-bold mb-4" style="font-family: 'Google Sans', sans-serif;">Tóm tắt đơn hàng</h5>
                            
                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-muted">Tạm tính</span>
                                <span class="fw-bold" id="cart-subtotal">@subtotal.ToString("N0")đ</span>
                            </div>
                             <div class="d-flex justify-content-between mb-3">
                                <span class="text-muted">Giảm giá</span>
                                <span class="fw-bold text-success">-0đ</span>
                            </div>
                            
                            <hr class="my-3 border-light opacity-50">
                            
                            <div class="d-flex justify-content-between mb-4 align-items-center">
                                <span class="fw-bold fs-5">Tổng tiền</span>
                                <span class="fw-bold fs-4 text-primary" id="cart-total">@total.ToString("N0")đ</span>
                            </div>
                            
                            <div class="d-grid gap-2">
                                <button type="button" onclick="window.location.href='/ThanhToan/Checkout'" class="btn btn-primary rounded-pill py-3 fw-bold shadow-sm">
                                    Tiến hành thanh toán
                                </button>
                                <a href="/GioHang/BaoGia" class="btn btn-outline-primary rounded-pill py-3 fw-bold">
                                    <i class="fas fa-file-invoice me-2"></i>Xuất báo giá
                                </a>
                            </div>

                            <div class="mt-4 pt-4 border-top">
                                <div class="d-flex align-items-center gap-3 mb-2 text-muted small">
                                    <i class="fas fa-shield-alt text-success fs-5"></i>
                                    <span>Bảo mật thanh toán 100%</span>
                                </div>
                                <div class="d-flex align-items-center gap-3 text-muted small">
                                    <i class="fas fa-truck text-primary fs-5"></i>
                                    <span>Giao hàng toàn quốc</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Toast Notification -->
<div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
    <div id="cartToast" class="toast align-items-center text-white bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body fw-bold">
                <i class="fas fa-check-circle me-2"></i><span class="toast-message">Cập nhật thành công</span>
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Quantity update logic
        function updateQuantity(productId, change) {
            const input = document.querySelector(`input[data-item-id="${productId}"]`);
            let currentQty = parseInt(input.value);
            let newQty = currentQty + change;
            
            if (newQty < 1) newQty = 1;
            if (newQty > 99) newQty = 99;
            
            input.value = newQty;
            
            // Local calculation for immediate feedback
            const price = parseFloat(input.dataset.price);
            const lineTotal = price * newQty;
            
            // Update line total
            const row = document.querySelector(`tr[data-item-id="${productId}"]`);
            const totalEl = row.querySelector('.total-amount');
            if(totalEl) {
                totalEl.textContent = lineTotal.toLocaleString('vi-VN') + 'đ';
            }

            // Update cart summary
            updateCartSummary();

            // AJAX call
             $.post('/GioHang/UpdateQuantity', { productId, quantity: newQty }, function() {
                 // Optional: Show toast on success
             });
        }

        // Calculate and update cart totals
        function updateCartSummary() {
            let subtotal = 0;
            document.querySelectorAll('.qty-input').forEach(input => {
                const qty = parseInt(input.value) || 0;
                const price = parseFloat(input.dataset.price) || 0;
                subtotal += qty * price;
            });
            
            const total = subtotal; // - discount
            
            document.getElementById('cart-subtotal').textContent = subtotal.toLocaleString('vi-VN') + 'đ';
            document.getElementById('cart-total').textContent = total.toLocaleString('vi-VN') + 'đ';
        }

        // Remove item logic
        function confirmRemoveItem(productId, productName) {
            if(confirm(`Bạn có chắc muốn xóa "${productName}" khỏi giỏ hàng?`)) {
                 $.post('/GioHang/RemoveFromCart', { productId }, function(res) {
                    if (res.success) {
                        const row = document.querySelector(`tr[data-item-id="${productId}"]`);
                        row.remove();
                        updateCartSummary();
                        
                        // Show toast
                        var toastEl = document.getElementById('cartToast');
                        var toast = new bootstrap.Toast(toastEl);
                        toastEl.querySelector('.toast-message').textContent = 'Đã xóa sản phẩm khỏi giỏ hàng';
                        toast.show();
                        
                        // Reload if empty
                        if(document.querySelectorAll('.cart-item-row').length === 0) {
                            location.reload();
                        }
                    }
                });
            }
        }
    </script>
    <style>
        .hover-opacity-100:hover { opacity: 1 !important; }
        .qty-input::-webkit-outer-spin-button, .qty-input::-webkit-inner-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }
        /* Override specific table styles */
        .table > :not(caption) > * > * {
            box-shadow: none;
            border-bottom-color: #f1f3f5;
        }
    </style>
}
