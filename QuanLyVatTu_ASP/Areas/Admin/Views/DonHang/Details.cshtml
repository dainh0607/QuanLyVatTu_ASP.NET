@model QuanLyVatTu_ASP.Areas.Admin.ViewModels.ChiTietDonHangViewModel
@{
    ViewData["Title"] = "Chi tiết đơn hàng" + Model.MaDonHang;
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="mb-0 text-primary fw-bold">CHI TIẾT ĐƠN HÀNG #@Model.MaDonHang</h3>
            <small class="text-muted">
                Khách hàng: <strong>@(Model.TenKhachHang ?? "---")</strong> |
                Ngày tạo: @(Model.NgayTao?.ToString("dd/MM/yyyy HH:mm") ?? "---")
            </small>
        </div>
        <div class="d-flex gap-2">
            @if (Model.HoaDonId != null)
            {
                <a asp-action="Details" asp-controller="HoaDon" asp-route-id="@Model.HoaDonId" 
                   class="btn btn-info rounded-pill shadow-sm text-white">
                    <i class="bi bi-receipt me-2"></i>Xem Hóa Đơn
                </a>
            }
            else
            {
                if (Model.DuDieuKienXuat)
                {
                    <form asp-action="CreateInvoice" asp-controller="HoaDon" asp-route-id="@Model.MaDonHang" method="post"
                          onsubmit="return confirm('Xác nhận xuất hóa đơn cho đơn hàng này?');">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-warning rounded-pill shadow-sm text-dark fw-bold">
                            <i class="bi bi-printer me-2"></i>Xuất Hóa Đơn
                        </button>
                    </form>
                }
                else
                {
                     <button type="button" class="btn btn-secondary rounded-pill shadow-sm" disabled 
                             title="Khách chưa cọc đủ 10% giá trị đơn hàng yêu cầu">
                        <i class="bi bi-printer-off me-2"></i>Xuất HĐ (Chưa đủ cọc)
                    </button>
                }
            }
            <a asp-action="Index" asp-controller="DonHang" class="btn btn-outline-secondary rounded-pill shadow-sm">
                <i class="bi bi-arrow-left me-2"></i>Quay lại
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6 mb-4">
            <div class="card shadow-sm h-100 border-0 rounded-4 overflow-hidden">
                <div class="card-header bg-primary text-white py-3">
                    <div class="row align-items-center">
                        <div class="col">
                            <strong class="h5 mb-0"><i class="bi bi-box-seam me-2"></i>KHO VẬT TƯ</strong>
                        </div>
                    </div>
                </div>

                <div class="p-3 bg-light border-bottom">
                    <form asp-action="Details" asp-controller="ChiTietDonHang" method="get" class="d-flex gap-2">
                        <input type="hidden" name="id" value="@Model.MaDonHang" />
                        <input name="search" class="form-control rounded-3" placeholder="Tìm tên, mã vật tư..." value="@Model.SearchTerm" />
                        <button class="btn btn-primary rounded-3 text-nowrap" type="submit">
                            <i class="bi bi-search me-1"></i>Tìm kiếm
                        </button>
                    </form>
                </div>
                <div class="card-body p-0">
                    <div style="max-height: 60vh; overflow-y: auto;">
                        <table class="table table-hover mb-0 align-middle">
                            <thead class="table-light sticky-top">
                                <tr>
                                    <th>Mã</th>
                                    <th>Tên vật tư</th>
                                    <th class="text-end">Giá bán</th>
                                    <th width="120" class="text-center">Thêm</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (!Model.DanhSachVatTu.Any())
                                {
                                    <tr><td colspan="4" class="text-center py-5 text-muted">Không tìm thấy vật tư nào</td></tr>
                                }
                                else
                                {
                                    foreach (var vt in Model.DanhSachVatTu)
                                    {
                                        <tr>
                                            <td><small class="fw-bold text-muted">@vt.MaCode</small></td>
                                            <td>
                                                <div class="fw-bold">@vt.TenVatTu</div>
                                                <small class="text-muted">Kho: @vt.SoLuongTon | @vt.TenLoai</small>
                                            </td>
                                            <td class="text-end text-danger fw-bold">@vt.GiaBan.ToString("N0")</td>
                                            <td>
                                                <form asp-action="ThemVatTu" asp-controller="ChiTietDonHang" method="post" class="d-flex gap-1 justify-content-end">
                                                    <input type="hidden" name="maDonHang" value="@Model.MaDonHang" />
                                                    <input type="hidden" name="maVatTu" value="@vt.MaVatTu" />

                                                    <input type="number" name="soLuong" min="1" value="1"
                                                           class="form-control form-control-sm text-center px-1 rounded-3" style="width:50px" />

                                                    <button type="submit" class="btn btn-success btn-sm rounded-3" title="Thêm vào đơn">
                                                        <i class="bi bi-plus-lg"></i>
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-6 mb-4">
            <div class="card shadow-sm h-100 border-0 rounded-4 overflow-hidden">
                <div class="card-header bg-success text-white py-3 d-flex justify-content-between align-items-center">
                    <strong class="h5 mb-0"><i class="bi bi-cart-check me-2"></i>ĐÃ CHỌN (@Model.ChiTietDonHang.Count)</strong>
                    <button type="submit" form="formXoa" class="btn btn-light btn-sm text-danger fw-bold rounded-pill"
                            onclick="return confirm('Xóa các dòng đã chọn?')">
                        <i class="bi bi-trash me-1"></i> Xóa chọn
                    </button>
                </div>

                <div class="card-body p-0 d-flex flex-column">
                    <div class="flex-grow-1" style="max-height: 60vh; overflow-y: auto;">
                        @if (!Model.ChiTietDonHang.Any())
                        {
                            <div class="text-center py-5 text-muted mt-5">
                                <i class="bi bi-basket display-1 text-light"></i>
                                <p class="mt-3">Chưa có vật tư nào trong đơn hàng</p>
                            </div>
                        }
                        else
                        {
                            <form id="formXoa" asp-action="XoaNhieu" asp-controller="ChiTietDonHang" method="post">
                                <input type="hidden" name="maDonHang" value="@Model.MaDonHang" />

                                <table class="table table-hover mb-0 align-middle">
                                    <thead class="table-light sticky-top">
                                        <tr>
                                            <th width="40" class="text-center">
                                                <input type="checkbox" id="checkAll" class="form-check-input" style="cursor:pointer" />
                                            </th>
                                            <th>Tên vật tư</th>
                                            <th width="140" class="text-center">Số lượng</th>
                                            <th class="text-end">Thành tiền</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.ChiTietDonHang)
                                        {
                                            <tr>
                                                <td class="text-center">
                                                    <input type="checkbox" name="selectedIds" value="@item.MaVatTu" class="form-check-input chk-item" style="cursor:pointer" />
                                                </td>
                                                <td>
                                                    <div class="fw-bold">@item.TenVatTu</div>
                                                    <small class="text-muted">Đơn giá: @item.DonGia.ToString("N0")</small>
                                                </td>
                                                <td>
                                                    <div class="input-group input-group-sm flex-nowrap">
                                                        <input type="number" form="frmUpdate_@item.MaVatTu" name="soLuong"
                                                               value="@item.SoLuong" min="1" class="form-control text-center rounded-start-3" />
                                                        <button type="submit" form="frmUpdate_@item.MaVatTu" class="btn btn-outline-primary rounded-end-3" title="Lưu số lượng">
                                                            <i class="bi bi-check-lg"></i>
                                                        </button>
                                                    </div>
                                                </td>
                                                <td class="text-end fw-bold text-danger">
                                                    @* Giả định ThanhTien là thuộc tính tính toán trong ViewModel *@
                                                    @((item.SoLuong * item.DonGia).ToString("N0"))
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </form>

                            @foreach (var item in Model.ChiTietDonHang)
                            {
                                <form id="frmUpdate_@item.MaVatTu" asp-action="SuaSoLuong" asp-controller="ChiTietDonHang" method="post" style="display:none">
                                    <input type="hidden" name="maDonHang" value="@Model.MaDonHang" />
                                    <input type="hidden" name="maVatTu" value="@item.MaVatTu" />
                                </form>
                            }
                        }
                    </div>
                </div>

                <div class="card-footer bg-light border-top py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="text-muted">Tổng cộng tiền hàng:</span>
                        <h3 class="mb-0 text-danger fw-bold">@Model.TongTien.ToString("N0") ₫</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Script chọn tất cả checkbox
        document.getElementById('checkAll')?.addEventListener('change', function() {
            let isChecked = this.checked;
            document.querySelectorAll('.chk-item').forEach(c => c.checked = isChecked);
        });
    </script>
}