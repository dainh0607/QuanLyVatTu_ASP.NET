@model QuanLyVatTu_ASP.Areas.Admin.ViewModels.DonHangIndexViewModel
@{
    ViewData["Title"] = "Quản lý Đơn Hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid py-4">
    <div class="card shadow-sm mb-4 border-0 rounded-4 overflow-hidden">
        <div class="card-body py-3">
            <div class="row align-items-center g-3">
                <div class="col-lg-8 col-xxl-7">
                    <form method="get" asp-action="Index" class="d-flex gap-2">
                        <div class="position-relative flex-grow-1">
                            <input type="text" class="form-control ps-5 rounded-3"
                                   placeholder="Nhập từ khóa tìm kiếm..."
                                   name="keyword"
                                   value="@ViewBag.Keyword">
                            <i class="bi bi-search position-absolute top-50 start-3 translate-middle-y text-muted"></i>
                        </div>
                        <select class="form-select rounded-3" style="min-width: 160px; max-width: 220px;">
                            <option value="">Tất cả trạng thái</option>
                        </select>
                        <button type="submit" class="btn btn-primary rounded-pill">Tìm kiếm</button>
                    </form>
                </div>
                <div class="col-lg-4 col-xxl-5 text-lg-end">
                    <a asp-action="Create" class="btn btn-success rounded-pill px-4 shadow-sm">
                        Thêm mới
                    </a>
                    <button type="button" id="btnDeleteSelected" class="btn btn-danger rounded-pill px-4 shadow-sm">
                        Xóa đã chọn
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0 rounded-4 overflow-hidden">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0 align-middle">
                    <thead class="bg-light">
                        <tr>
                            <th width="60" class="text-center">
                                <input class="form-check-input" type="checkbox" id="checkAll" />
                            </th>
                            <th>Mã Hiển Thị</th>
                            <th>Khách Hàng</th>
                            <th>Nhân Viên</th>
                            <th>Ngày Đặt</th>
                            <th>Tổng Tiền</th>
                            <th>Đặt cọc</th>
                            <th>PT Đặt cọc</th>
                            <th>Ngày cọc</th>
                            <th>Trạng thái</th>
                            <th>Ghi chú</th>
                            <th>Ngày tạo</th>
                            <th width="140" class="text-center">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td class="text-center">
                                    <input class="form-check-input chk-item" type="checkbox" value="@item.ID" />
                                </td>
                                <td><strong>@item.MaHienThi</strong></td>
                                <td>@item.TenKhachHang</td>
                                <td>@item.TenNhanVien</td>
                                <td>@item.NgayDat.ToString("dd/MM/yyyy HH:mm")</td>
                                <td class="text-end fw-bold text-danger">
                                    @item.TongTien.ToString("N0") đ
                                </td>
                                <td class="text-end">
                                    @(item.SoTienDatCoc > 0 ? string.Format("{0:N0} đ", item.SoTienDatCoc) : "—")
                                </td>
                                <td>
                                    <span class="badge bg-info text-white">
                                        @(item.PhuongThucDatCoc ?? "—")
                                    </span>
                                </td>
                                <td>
                                    @(item.NgayDatCoc.HasValue? item.NgayDatCoc.Value.ToString("dd/MM/yyyy") : "—")
                                </td>
                                <td>
                                    @{
                                        var status = (item.TrangThai ?? "").Trim();
                                        var badgeClass = status switch
                                        {
                                            "Đã xác nhận" => "bg-success",
                                            "Đang xử lý" => "bg-warning text-dark",
                                            "Đã hủy" => "bg-danger",
                                            "Hoàn thành" => "bg-primary",
                                            _ => "bg-secondary"
                                        };
                                    }
                                    <span class="badge @badgeClass px-3 py-2">@status</span>
                                </td>
                                <td>
                                    @if (!string.IsNullOrWhiteSpace(item.GhiChu))
                                    {
                                        <span class="text-primary" style="cursor: help;" title="@item.GhiChu" data-bs-toggle="tooltip">Xem</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">—</span>
                                    }
                                </td>
                                <td>@item.NgayTao.ToString("dd/MM/yyyy")</td>
                                <td class="text-center py-3">
                                    <div class="btn-group" role="group">
                                        <a asp-controller="ChiTietDonHang" asp-action="Details" asp-route-id="@item.ID"
                                           class="btn btn-info btn-sm text-white" title="Chi tiết">
                                            <i class="bi bi-eye"></i>
                                        </a>

                                        <a asp-action="Edit" asp-route-id="@item.ID"
                                           class="btn btn-outline-warning btn-sm" title="Sửa">
                                            <i class="bi bi-pencil"></i>
                                        </a>

                                        <form asp-action="Delete" asp-route-id="@item.ID" method="post" class="d-inline"
                                              onsubmit="return confirm('Bạn có chắc chắn muốn xóa đơn hàng này không?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-outline-danger btn-sm" title="Xóa">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                        @if (!Model.Items.Any())
                        {
                            <tr>
                                <td colspan="13" class="text-center py-5 text-muted">
                                    <i class="bi bi-inbox display-6 d-block mb-3"></i>
                                    Không có đơn hàng nào
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="card-footer bg-white d-flex justify-content-between align-items-center py-4 border-0">
                <div class="text-muted small">
                    Hiển thị @(Model.Items.Any() ? (Model.PageIndex - 1) * Model.PageSize + 1 : 0)
                    đến @(Math.Min(Model.PageIndex * Model.PageSize, Model.TotalRecords))
                    trong tổng <strong>@Model.TotalRecords</strong> bản ghi
                </div>
                <nav>
                    <ul class="pagination pagination-modern mb-0">
                        <li class="page-item @(Model.PageIndex == 1 ? "disabled" : "")">
                            <a class="page-link" asp-action="Index" asp-route-page="@(Model.PageIndex - 1)" asp-route-keyword="@ViewBag.Keyword">«</a>
                        </li>
                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                                <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-keyword="@ViewBag.Keyword">@i</a>
                            </li>
                        }
                        <li class="page-item @(Model.PageIndex == Model.TotalPages ? "disabled" : "")">
                            <a class="page-link" asp-action="Index" asp-route-page="@(Model.PageIndex + 1)" asp-route-keyword="@ViewBag.Keyword">»</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        .pagination-modern .page-link {
            border: none;
            color: #6c757d;
            margin: 0 3px;
            border-radius: 50% !important;
            width: 35px;
            height: 35px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .pagination-modern .page-item.active .page-link {
            background-color: #0d6efd;
            color: white;
            box-shadow: 0 2px 5px rgba(13, 110, 253, 0.3);
        }
    </style>
}

@section Scripts {
    <script>
        $("#checkAll").on("change", function () {
            $(".chk-item").prop("checked", this.checked);
        });

        $("#btnDeleteSelected").on("click", function () {
            var selectedIds = $(".chk-item:checked").map(function () { return this.value; }).get();
            if (selectedIds.length === 0) {
                alert("Vui lòng chọn ít nhất một đơn hàng để xóa!");
                return;
            }
            if (confirm(`Bạn có chắc muốn xóa ${selectedIds.length} đơn hàng đã chọn không?`)) {
                var form = $('<form method="post" action="@Url.Action("XoaNhieu")">');
                 form.append('@Html.AntiForgeryToken()');
                selectedIds.forEach(id => {
                    form.append(`<input type="hidden" name="ids" value="${id}" />`);
                });
                $('body').append(form);
                form.submit();
            }
        });

        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
          return new bootstrap.Tooltip(tooltipTriggerEl)
        })
    </script>
}