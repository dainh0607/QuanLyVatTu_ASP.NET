@model QuanLyVatTu_ASP.Areas.Admin.ViewModels.DonHangCreateEditViewModel
@{
    ViewData["Title"] = "Tạo đơn hàng mới";
    Layout = "_AdminLayout";
}

<div class="container-fluid py-5">
    <div class="row justify-content-center">
        <div class="col-xxl-10 col-xl-11">
            <div class="card border-0 shadow-lg rounded-4">
                <div class="card-header bg-gradient-primary text-white py-4 px-5">
                    <h3 class="mb-0 fw-bold">
                        <i class="fa-solid fa-cart-plus me-3"></i> Tạo đơn hàng mới
                    </h3>
                </div>
                <div class="card-body p-5">
                    <form asp-route="them-moi" method="post">
                        @Html.AntiForgeryToken()

                        <div class="row g-4">
                            <div class="col-lg-6">
                                <div class="mb-4">
                                    <label class="form-label fw-semibold">Khách hàng <span class="text-danger">*</span></label>
                                    <select asp-for="KhachHangId" class="form-select form-select-lg rounded-3" asp-items="ViewBag.KhachHangList" required></select>
                                </div>
                                <div class="mb-4">
                                    <label class="form-label fw-semibold">Nhân viên phụ trách</label>
                                    <select asp-for="NhanVienId" class="form-select form-select-lg rounded-3" asp-items="ViewBag.NhanVienList"></select>
                                </div>
                                <div class="mb-4">
                                    <label class="form-label fw-semibold">Ngày đặt <span class="text-danger">*</span></label>
                                    <input asp-for="NgayDat" class="form-control form-control-lg rounded-3" type="datetime-local" required />
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="mb-4">
                                    <label class="form-label fw-semibold">Tổng tiền <span class="text-danger">*</span></label>
                                    <input asp-for="TongTien" class="form-control form-control-lg rounded-3 text-end text-danger fw-bold" required />
                                </div>
                                <div class="mb-4">
                                    <label class="form-label fw-semibold">Số tiền đặt cọc</label>
                                    <input asp-for="SoTienDatCoc" class="form-control form-control-lg rounded-3 text-end" />
                                </div>
                                <div class="mb-4">
                                    <label class="form-label fw-semibold">Phương thức đặt cọc</label>
                                    <select asp-for="PhuongThucDatCoc" class="form-select form-select-lg rounded-3">
                                        <option value="">-- Chọn phương thức --</option>
                                        <option value="Tiền mặt">Tiền mặt</option>
                                        <option value="Chuyển khoản">Chuyển khoản</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="mb-4">
                                    <label class="form-label fw-semibold">Ghi chú</label>
                                    <textarea asp-for="GhiChu" class="form-control rounded-3" rows="3"></textarea>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-4 mt-5 pt-4 border-top">
                            <a asp-route="" class="btn btn-outline-secondary btn-lg px-5 rounded-pill">
                                <i class="fa-solid fa-ban me-2"></i>Hủy bỏ
                            </a>
                            <button type="submit" class="btn btn-success btn-lg px-5 rounded-pill shadow-sm">
                                <i class="fa-solid fa-save me-3"></i>Tạo đơn hàng
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .bg-gradient-primary {
            background: linear-gradient(135deg, #265077, #1e4258) !important;
        }

        .form-control-lg, .form-select-lg {
            border-radius: 12px;
            padding: 0.8rem 1.3rem;
            font-size: 1.1rem;
        }

        .form-label {
            font-weight: 600;
            color: #265077;
        }
    </style>
}