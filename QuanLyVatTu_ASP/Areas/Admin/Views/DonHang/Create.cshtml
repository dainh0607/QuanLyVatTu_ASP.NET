@model QuanLyVatTu_ASP.Areas.Admin.ViewModels.DonHangCreateEditViewModel
@{
    ViewData["Title"] = "Tạo đơn hàng mới";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid py-5">
    <div class="row justify-content-center">
        <div class="col-xxl-10 col-xl-11">
            <div class="card border-0 shadow-lg rounded-4">
                <div class="card-header bg-gradient-primary text-white py-4 px-5">
                    <h3 class="mb-0 fw-bold">
                        <i class="fa-solid fa-cart-plus me-3"></i> Tạo đơn hàng mới
                    </h3>
                </div>
                <div class="card-body p-5">
                    <form asp-action="Create" asp-controller="DonHang" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3" role="alert"></div>

                        <div class="row g-4">
                            <div class="col-lg-6">
                                <div class="mb-4">
                                    <label class="form-label fw-semibold">Khách hàng <span class="text-danger">*</span></label>
                                    <select asp-for="KhachHangId" class="form-select form-select-lg rounded-3" asp-items="ViewBag.KhachHangList" required>
                                        <option value="">-- Chọn khách hàng --</option>
                                    </select>
                                    <span asp-validation-for="KhachHangId" class="text-danger"></span>
                                </div>
                                <div class="mb-4">
                                    <label class="form-label fw-semibold">Nhân viên phụ trách</label>
                                    <input type="hidden" asp-for="NhanVienId" />
                                    <input type="text" class="form-control form-control-lg rounded-3 bg-light" readonly value="@ViewBag.CurrentNhanVienName" />
                                </div>
                                <div class="mb-4">
                                    <label class="form-label fw-semibold">Ngày đặt <span class="text-danger">*</span></label>
                                    <input asp-for="NgayDat" class="form-control form-control-lg rounded-3 bg-light" type="datetime-local" readonly
                                           value="@(Model?.NgayDat.ToString("yyyy-MM-ddTHH:mm") ?? DateTime.Now.ToString("yyyy-MM-ddTHH:mm"))" />
                                    <span asp-validation-for="NgayDat" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-lg-6">
                                <div class="mb-4">
                                    <label class="form-label fw-semibold">Tổng tiền (Khởi tạo)</label>
                                    <input asp-for="TongTien" class="form-control form-control-lg rounded-3 text-end fw-bold bg-light"
                                           readonly value="0" />
                                    <small class="text-muted fst-italic">* Tiền hàng sẽ được tính sau khi thêm vật tư.</small>
                                </div>

                                <div class="mb-4">
                                    <label class="form-label fw-semibold">Số tiền đặt cọc</label>
                                    <input asp-for="SoTienDatCoc" class="form-control form-control-lg rounded-3 text-end" placeholder="0" />
                                </div>
                                <div class="mb-4">
                                    <label class="form-label fw-semibold">Phương thức đặt cọc</label>
                                    <select asp-for="PhuongThucDatCoc" class="form-select form-select-lg rounded-3">
                                        <option value="">-- Chọn phương thức --</option>
                                        <option value="Tiền mặt">Tiền mặt</option>
                                        <option value="Chuyển khoản">Chuyển khoản</option>
                                    </select>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="mb-4">
                                    <label class="form-label fw-semibold">Ghi chú</label>
                                    <textarea asp-for="GhiChu" class="form-control rounded-3" rows="3" placeholder="Ghi chú thêm về đơn hàng..."></textarea>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-3 mt-5 pt-4 border-top">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-5 rounded-pill">
                                <i class="fa-solid fa-ban me-2"></i> Hủy bỏ
                            </a>
                            <button type="submit" class="btn btn-success btn-lg px-5 rounded-pill shadow-sm">
                                <i class="fa-solid fa-save me-3"></i> Lưu
                            </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" rel="stylesheet" />
    <style>
        .bg-gradient-primary {
            background: linear-gradient(135deg, #265077, #1e4258) !important;
        }

        .form-control-lg, .form-select-lg {
            border-radius: 12px;
            padding: 0.8rem 1.3rem;
            font-size: 1.1rem;
        }

        .form-label {
            font-weight: 600;
            color: #265077;
        }

        /* Select2 custom styling */
        .select2-container--bootstrap-5 .select2-selection--single {
            min-height: 48px;
            padding: 0.6rem 1rem;
            font-size: 1.1rem;
            border-radius: 12px;
        }
        .select2-container--bootstrap-5 .select2-selection--single .select2-selection__rendered {
            line-height: 1.8;
        }
    </style>
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#KhachHangId').select2({
                theme: 'bootstrap-5',
                placeholder: '-- Tìm và chọn khách hàng --',
                allowClear: true,
                width: '100%',
                language: {
                    noResults: function() {
                        return "Không tìm thấy khách hàng";
                    },
                    searching: function() {
                        return "Đang tìm kiếm...";
                    }
                }
            });
        });
    </script>
}