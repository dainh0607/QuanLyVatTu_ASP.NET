@model QuanLyVatTu_ASP.Areas.Admin.ViewModels.DonHangCreateEditViewModel
@{
    ViewData["Title"] = "Cập nhật đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid py-5">
    <div class="row justify-content-center">
        <div class="col-xxl-10 col-xl-11">
            <div class="card border-0 shadow-lg rounded-4">
                <div class="card-header bg-gradient-warning text-white py-4 px-5">
                    <h3 class="mb-0 fw-bold">
                        <i class="fa-solid fa-file-pen me-3"></i> Cập nhật đơn hàng #@Model.Id
                    </h3>
                </div>
                <div class="card-body p-5">
                    <form asp-action="Edit" asp-controller="DonHang" asp-route-id="@Model.Id" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="MaHienThi" />
                        <input type="hidden" asp-for="KhachHangId" />
                        <input type="hidden" asp-for="NhanVienId" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3" role="alert"></div>

                        <div class="row g-4">
                            <div class="col-lg-6">
                                <div class="mb-4">
                                    <label class="form-label fw-semibold">Khách hàng</label>
                                    <input type="text" class="form-control form-control-lg rounded-3 bg-light" readonly value="@ViewBag.CurrentKhachHangName" />
                                </div>
                                <div class="mb-4">
                                    <label class="form-label fw-semibold">Nhân viên phụ trách</label>
                                    <input type="text" class="form-control form-control-lg rounded-3 bg-light" readonly value="@ViewBag.CurrentNhanVienName" />
                                </div>
                                <div class="mb-4">
                                    <label class="form-label fw-semibold">Ngày đặt <span class="text-danger">*</span></label>
                                    <input asp-for="NgayDat" class="form-control form-control-lg rounded-3 bg-light opacity-75" type="datetime-local" readonly 
                                           value="@Model.NgayDat.ToString("yyyy-MM-ddTHH:mm")" />
                                    <span asp-validation-for="NgayDat" class="text-danger"></span>
                                </div>
                                <div class="mb-4">
                                    <label class="form-label fw-semibold">Trạng thái</label>
                                    @if (Model.TrangThai == "Đã giao")
                                    {
                                        <input asp-for="TrangThai" class="form-control form-control-lg rounded-3 bg-success text-white opacity-75" readonly />
                                    }
                                    else if (Model.TrangThai == "Đã hủy")
                                    {
                                        <input asp-for="TrangThai" class="form-control form-control-lg rounded-3 bg-danger text-white opacity-50" readonly disabled />
                                        <small class="text-danger fst-italic">* Đơn hàng đã hủy không thể chỉnh sửa trạng thái</small>
                                    }
                                    else
                                    {
                                        <select asp-for="TrangThai" class="form-select form-select-lg rounded-3">
                                            <option value="Chờ xác nhận">Chờ xác nhận</option>
                                            <option value="Đã xác nhận">Đã xác nhận</option>
                                            <option value="Đang xử lý">Đang xử lý</option>
                                            <option value="Đã giao">Đã giao</option>
                                            <option value="chưa thanh toán">chưa thanh toán</option>
                                            <option value="Đã thanh toán">Đã thanh toán</option>
                                            <option value="Đã hủy">Đã hủy</option>
                                        </select>
                                    }
                                </div>
                            </div>

                            <div class="col-lg-6">
                                <div class="mb-4">
                                    <label class="form-label fw-semibold">Tổng tiền (Tự động tính)</label>
                                    <input type="text" id="TongTien" class="form-control form-control-lg rounded-3 text-end text-danger fw-bold bg-light"
                                           readonly value="@(Model.TongTien?.ToString("N0") ?? "0")" />
                                    <small class="text-muted fst-italic">* Tổng tiền được tính từ chi tiết đơn hàng.</small>
                                </div>
                                <div class="mb-4">
                                    <label class="form-label fw-semibold">Số tiền đặt cọc</label>
                                    <input asp-for="SoTienDatCoc" class="form-control form-control-lg rounded-3 text-end" placeholder="0" 
                                           value="@(Model.SoTienDatCoc?.ToString("0") ?? "")" />
                                    <span asp-validation-for="SoTienDatCoc" class="text-danger"></span>
                                    <small id="depositHint" class="text-muted fst-italic">* Số tiền cần đặt cọc là @(((Model.TongTien ?? 0) * 0.1m).ToString("N0")) (10% giá trị đơn hàng)</small>
                                </div>
                                <div class="mb-4">
                                    <label class="form-label fw-semibold">Phương thức thanh toán <span class="text-danger">*</span></label>
                                    <select asp-for="PhuongThucDatCoc" class="form-select form-select-lg rounded-3" id="PhuongThucDatCoc" required>
                                        <option value="">-- Chọn phương thức --</option>
                                        <option value="Tiền mặt">Tiền mặt</option>
                                        <option value="Chuyển khoản">Chuyển khoản</option>
                                    </select>
                                    <span asp-validation-for="PhuongThucDatCoc" class="text-danger"></span>
                                </div>
                                <div class="mb-4">
                                    <label class="form-label fw-semibold">Ngày đặt cọc</label>
                                    <input asp-for="NgayDatCoc" class="form-control form-control-lg rounded-3 bg-light opacity-75" type="date" readonly 
                                           value="@(Model.NgayDatCoc?.ToString("yyyy-MM-dd") ?? DateTime.Now.ToString("yyyy-MM-dd"))"/>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="mb-4">
                                    <label class="form-label fw-semibold">Ghi chú</label>
                                    <textarea asp-for="GhiChu" class="form-control rounded-3" rows="3"></textarea>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-5 pt-4 border-top">
                            <a asp-action="Details" asp-controller="ChiTietDonHang" asp-route-id="@Model.Id"
                               class="btn btn-info btn-lg px-4 rounded-pill text-white shadow-sm">
                                <i class="fa-solid fa-list-check me-2"></i> Quản lý Vật tư
                            </a>

                            <div class="d-flex gap-3">
                                <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-5 rounded-pill">
                                    <i class="fa-solid fa-ban me-2"></i> Hủy bỏ
                                </a>
                                <button type="submit" id="btnSave" class="btn btn-warning btn-lg px-5 rounded-pill shadow-sm text-white">
                                    <i class="fa-solid fa-save me-3"></i> Cập nhật
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('form').submit(function (e) {
                // Validate phương thức thanh toán
                if (!$('#PhuongThucDatCoc').val()) {
                    e.preventDefault();
                    $('#PhuongThucDatCoc').addClass('is-invalid');
                    alert("Vui lòng chọn phương thức thanh toán!");
                    return false;
                }

                // Remove formatting (commas, dots) to get raw numbers
                var tongTienStr = $('#TongTien').val().replace(/[^0-9]/g, '');
                var datCocStr = $('#SoTienDatCoc').val().replace(/[^0-9]/g, '');

                var tongTien = parseFloat(tongTienStr) || 0;
                var datCoc = parseFloat(datCocStr) || 0;
                var minDeposit = tongTien * 0.1;

                if (datCoc < minDeposit) {
                   e.preventDefault(); // Prevent submit
                   $('#depositHint').removeClass('text-muted').addClass('text-danger fw-bold');
                   alert("Số tiền đặt cọc chưa đủ 10% tổng giá trị đơn hàng!");
                   return false;
                } else {
                   $('#depositHint').removeClass('text-danger fw-bold').addClass('text-muted');
                }
            });

            // Reset validation on change
            $('#PhuongThucDatCoc').on('change', function() {
                $(this).removeClass('is-invalid');
            });

            $('#SoTienDatCoc').on('input', function() {
                 $('#depositHint').removeClass('text-danger fw-bold').addClass('text-muted');
            });
        });
    </script>
}

@section Styles {
    <style>
        .bg-gradient-warning {
            background: linear-gradient(135deg, #f0ad4e, #ec971f) !important;
        }

        .form-control-lg, .form-select-lg {
            border-radius: 12px;
            padding: 0.8rem 1.3rem;
            font-size: 1.1rem;
        }

        .form-label {
            font-weight: 600;
            color: #265077;
        }
    </style>
}