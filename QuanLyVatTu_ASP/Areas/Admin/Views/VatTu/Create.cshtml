@model QuanLyVatTu_ASP.Areas.Admin.ViewModels.VatTu.VatTuCreateEditViewModel
@{
    ViewData["Title"] = "Tạo vật tư mới";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid py-5">
    <div class="row justify-content-center">
        <div class="col-12">
            <div class="card border-0 shadow-lg rounded-4">
                <div class="card-header bg-gradient-primary text-white py-4 px-5">
                    <h3 class="mb-0 fw-bold">
                        <i class="fa-solid fa-box me-3"></i> Tạo vật tư mới
                    </h3>
                </div>
                <div class="card-body p-5">
                    <form asp-action="Create" asp-controller="VatTu" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3" role="alert"></div>

                        <div class="row g-4">
                            <!-- Row 1: Basic Info -->
                            <div class="col-md-2">
                                <div class="mb-4">
                                    <label class="form-label fw-semibold">Mã vật tư</label>
                                    <input type="text" class="form-control form-control-lg bg-light" value="@Model.MaHienThi" disabled />
                                    <small class="text-muted fst-italic">* Tự động</small>
                                </div>
                            </div>
                            <div class="col-md-5">
                                <div class="mb-4">
                                    <label class="form-label fw-semibold">Tên vật tư <span class="text-danger">*</span></label>
                                    <input asp-for="TenVatTu" class="form-control form-control-lg rounded-3" placeholder="Nhập tên vật tư..." required />
                                    <span asp-validation-for="TenVatTu" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="mb-4">
                                    <label class="form-label fw-semibold">ĐVT <span class="text-danger">*</span></label>
                                    <input asp-for="DonViTinh" class="form-control form-control-lg rounded-3" placeholder="Cái..." required />
                                    <span asp-validation-for="DonViTinh" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="mb-4">
                                    <label class="form-label fw-semibold">Tồn kho ban đầu</label>
                                    <input asp-for="SoLuongTon" class="form-control form-control-lg rounded-3" type="number" min="0" placeholder="0" />
                                </div>
                            </div>

                            <!-- Row 2: Pricing & Category -->
                            <div class="col-md-3">
                                <div class="mb-4">
                                    <label class="form-label fw-semibold">Giá nhập <span class="text-danger">*</span></label>
                                    <input asp-for="GiaNhap" class="form-control form-control-lg rounded-3 text-end" placeholder="0" required />
                                    <span asp-validation-for="GiaNhap" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="mb-4">
                                    <label class="form-label fw-semibold">Giá bán <span class="text-danger">*</span></label>
                                    <input asp-for="GiaBan" class="form-control form-control-lg rounded-3 text-end" placeholder="0" required />
                                    <span asp-validation-for="GiaBan" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="mb-4">
                                    <label class="form-label fw-semibold">Loại vật tư <span class="text-danger">*</span></label>
                                    <select asp-for="MaLoaiVatTu" class="form-select form-select-lg rounded-3" asp-items="ViewBag.LoaiVatTuList" required>
                                        <option value="">-- Chọn --</option>
                                    </select>
                                    <span asp-validation-for="MaLoaiVatTu" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="mb-4">
                                    <label class="form-label fw-semibold">Nhà cung cấp <span class="text-danger">*</span></label>
                                    <select asp-for="MaNhaCungCap" class="form-select form-select-lg rounded-3" asp-items="ViewBag.NhaCungCapList" required>
                                        <option value="">-- Chọn --</option>
                                    </select>
                                    <span asp-validation-for="MaNhaCungCap" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Row 3: Image -->
                            <div class="col-md-6">
                                <div class="mb-4">
                                    <label asp-for="HinhAnhFile" class="form-label fw-semibold">Hình ảnh sản phẩm</label>
                                    <input asp-for="HinhAnhFile" class="form-control form-control-sm rounded-3" type="file" accept="image/*" />
                                    <small class="text-muted">Chấp nhận JPG, PNG, GIF</small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-4">
                                    <label class="form-label fw-semibold">Xem trước</label>
                                    <div id="imagePreview" class="border rounded-3 p-2 d-flex align-items-center justify-content-center bg-light" style="height: 100px;">
                                        <span class="text-muted">Chưa có ảnh</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-4 mt-5 pt-4 border-top">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-5 rounded-pill">
                                <i class="fa-solid fa-ban me-2"></i>Hủy bỏ
                            </a>
                            <button type="submit" class="btn btn-success btn-lg px-5 rounded-pill shadow-sm">
                                <i class="fa-solid fa-save me-3"></i>Tạo vật tư
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .bg-gradient-primary {
            background: linear-gradient(135deg, #265077, #1e4258) !important;
        }

        .form-control-lg, .form-select-lg {
            border-radius: 12px;
            padding: 0.8rem 1.3rem;
            font-size: 1.1rem;
        }

        .form-label {
            font-weight: 600;
            color: #265077;
        }
    </style>
}