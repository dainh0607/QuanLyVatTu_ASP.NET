<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Hệ Thống Quản Lý Vật Tư</title>

    <!-- Bootstrap 5.3 + Font + Icon -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    <!-- Layout chung -->
    <link rel="stylesheet" href="~/admin/css/StyleLayout.css" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="bg-light">

    <!-- HEADER CỐ ĐỊNH -->
    <header class="header">
        <div class="back-system">
            <a class="navbar-brand" href="#">
                <img src="~/admin/images/Logo.webp" alt="Logo QLVT" />
            </a>
            <a href="#">Hệ Thống Quản Lý Vật Tư</a>
        </div>
    </header>

    <!-- SIDEBAR CỐ ĐỊNH -->
    <aside class="navbar">
        <div class="navbar-nav">
            <!-- ĐƠN HÀNG -->
            <div class="nav-item">
                <a asp-area="Admin" asp-route="don-hang">
                    <i class="fa-solid fa-cart-shopping"></i>
                    <span>Đơn hàng</span>
                </a>
            </div>

            <!-- QUẢN LÝ VLXD -->
            <div class="nav-item">
                <a href="javascript:void(0)">
                    <i class="fa-solid fa-helmet-safety"></i>
                    <span>Quản lý VLXD</span>
                </a>
                <div class="sub-menu">
                    <div class="nav-item">
                        <a asp-area="Admin" asp-route="vat-tu"><span>Vật tư</span></a>
                    </div>
                    <div class="nav-item">
                        <a asp-area="Admin" asp-route="loai-vat-tu"><span>Loại vật tư</span></a>
                    </div>
                    <div class="nav-item">
                        <a asp-area="Admin" asp-route="nha-cung-cap"><span>Nhà cung cấp</span></a>
                    </div>
                </div>
            </div>

            <!-- KHÁCH HÀNG -->
            <div class="nav-item">
                <a asp-area="Admin" asp-route="khach-hang">
                    <i class="fa-solid fa-user"></i>
                    <span>Khách hàng</span>
                </a>
            </div>

            <!-- NHÂN VIÊN -->
            <div class="nav-item">
                <a asp-area="Admin" asp-route="nhan-vien">
                    <i class="fa-solid fa-user-tie"></i>
                    <span>Nhân viên</span>
                </a>
            </div>
        </div>
    </aside>

    <!-- NỘI DUNG CHÍNH -->
    <main class="main-content-area">
        <div class="content-wrapper">
            @RenderBody()
        </div>
    </main>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    <!-- Tooltip/Popover fix cho partial view -->
    <script>
        const initBs = () => {
            document.querySelectorAll('[data-bs-toggle="tooltip"]:not([data-bs-init])').forEach(el => {
                el.setAttribute('data-bs-init', 'true');
                new bootstrap.Tooltip(el);
            });
            document.querySelectorAll('[data-bs-toggle="popover"]:not([data-bs-init])').forEach(el => {
                el.setAttribute('data-bs-init', 'true');
                new bootstrap.Popover(el);
            });
        };
        document.addEventListener("DOMContentLoaded", initBs);
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>