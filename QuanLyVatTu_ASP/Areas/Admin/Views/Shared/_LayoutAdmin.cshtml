<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Hệ Thống Quản Lý Vật Tư</title>

    <!-- Bootstrap 5.3 + Font + Icon -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

    <!-- Layout chung -->
    <link rel="stylesheet" href="~/admin/css/StyleLayout.css" />
    <link rel="stylesheet" href="~/admin/css/site.css" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="bg-light">

    <!-- HEADER CỐ ĐỊNH -->
    <style>
        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0 20px;
        }
        .user-profile-header {
            margin-left: auto;
            color: white;
        }
    </style>
    <header class="header">
        <div class="back-system">
            <a class="navbar-brand" asp-area="Admin" asp-controller="DonHang" asp-action="Index">
                <img src="~/admin/images/Logo.webp" alt="Logo QLVT" />
            </a>
            <a asp-area="Admin" asp-controller="DonHang" asp-action="Index">Hệ Thống Quản Lý Vật Tư</a>
        </div>
        @await Component.InvokeAsync("UserProfileHeader")
    </header>

    <!-- SIDEBAR CỐ ĐỊNH -->
    <aside class="navbar">
        <div class="navbar-nav">
            <div class="nav-item">
                <a asp-area="Admin" asp-controller="DonHang" asp-action="Index">
                    <i class="fa-solid fa-cart-shopping"></i>
                    <span>Đơn hàng</span>
                </a>
            </div>

            <div class="nav-item">
                <a asp-area="Admin" asp-controller="HoaDon" asp-action="Index">
                    <i class="fas fa-file-invoice"></i>
                    <span>Xuất hóa đơn</span>
                </a>
            </div>

            <div class="nav-item">
                <a href="javascript:void(0)">
                    <i class="fa-solid fa-helmet-safety"></i>
                    <span>Quản lý VLXD</span>
                </a>
                <div class="sub-menu">
                    <div class="nav-item">
                        <a asp-area="Admin" asp-controller="VatTu" asp-action="Index"><span>Vật tư</span></a>
                    </div>
                    <div class="nav-item">
                        <a asp-area="Admin" asp-controller="LoaiVatTu" asp-action="Index"><span>Loại vật tư</span></a>
                    </div>
                    <div class="nav-item">
                        <a asp-area="Admin" asp-controller="NhaCungCap" asp-action="Index"><span>Nhà cung cấp</span></a>
                    </div>
                </div>
            </div>

            <div class="nav-item">
                <a asp-area="Admin" asp-controller="KhachHang" asp-action="Index">
                    <i class="fa-solid fa-user"></i>
                    <span>Khách hàng</span>
                </a>
            </div>

            <div class="nav-item">
                <a asp-area="Admin" asp-controller="NhanVien" asp-action="Index">
                    <i class="fa-solid fa-user-tie"></i>
                    <span>Nhân viên</span>
                </a>
            </div>

            <div class="nav-item">
                <a asp-area="Admin" asp-controller="ThongKe" asp-action="Index">
                    <i class="fas fa-chart-line"></i>
                    <span>Thống kê</span>
                </a>
            </div>
        </div>

        <div class="navbar-nav mt-auto pb-3">
             <div class="nav-item">
                <a asp-action="Logout" asp-controller="Account" asp-area="">
                    <i class="fa-solid fa-right-from-bracket"></i>
                    <span>Đăng xuất</span>
                </a>
            </div>
        </div>
    </aside>

    <main class="main-content-area">
        <div class="content-wrapper">
            @RenderBody()
        </div>
    </main>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>
    <script>
        const initBs = () => {
            document.querySelectorAll('[data-bs-toggle="tooltip"]:not([data-bs-init])').forEach(el => {
                el.setAttribute('data-bs-init', 'true');
                new bootstrap.Tooltip(el);
            });
            document.querySelectorAll('[data-bs-toggle="popover"]:not([data-bs-init])').forEach(el => {
                el.setAttribute('data-bs-init', 'true');
                new bootstrap.Popover(el);
            });
        };
        document.addEventListener("DOMContentLoaded", initBs);
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>