@model QuanLyVatTu_ASP.Areas.Admin.ViewModels.KhachHangViewModels.KhachHangCreateEditViewModel
@{
    ViewData["Title"] = "Cập nhật khách hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid py-5">
    <div class="row justify-content-center">
        <div class="col-xxl-8 col-xl-9">
            <div class="card border-0 shadow-lg rounded-4">
                <div class="card-header bg-gradient-warning text-white py-4 px-5">
                    <h3 class="mb-0 fw-bold">
                        <i class="fa-solid fa-user-pen me-3"></i> Cập nhật khách hàng
                    </h3>
                </div>
                <div class="card-body p-5">
                    <form asp-action="Edit" asp-controller="KhachHang" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="AnhDaiDien" />

                        <div class="row g-4">
                            <div class="col-lg-8">
                                <div class="mb-4">
                                    <label asp-for="HoTen" class="form-label fw-semibold">Họ và tên <span class="text-danger">*</span></label>
                                    <input asp-for="HoTen" class="form-control form-control-lg rounded-3" />
                                    <span asp-validation-for="HoTen" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="mb-4">
                                    <label class="form-label fw-semibold">Mã khách hàng</label>
                                    <input type="text" class="form-control form-control-lg bg-light" value="@Model.MaHienThi" disabled />
                                </div>
                            </div>

                            <div class="col-lg-6">
                                <div class="mb-4">
                                    <label asp-for="Email" class="form-label fw-semibold">Email <span class="text-danger">*</span></label>
                                    <input asp-for="Email" class="form-control form-control-lg rounded-3" type="email" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="mb-4">
                                    <label asp-for="SoDienThoai" class="form-label fw-semibold">Số điện thoại</label>
                                    <input asp-for="SoDienThoai" class="form-control form-control-lg rounded-3" />
                                    <span asp-validation-for="SoDienThoai" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-lg-6">
                                <div class="mb-4">
                                    <label asp-for="AnhDaiDienFile" class="form-label fw-semibold">Ảnh đại diện</label>
                                    <input asp-for="AnhDaiDienFile" class="form-control form-control-sm rounded-3" type="file" accept="image/*" />
                                    <small class="text-muted">Chọn ảnh mới để thay thế (hoặc bỏ qua để giữ nguyên)</small>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="mb-4">
                                    <label class="form-label fw-semibold">Ảnh hiện tại</label>
                                    <div class="border rounded-3 p-2 d-flex align-items-center justify-content-center bg-light" style="height: 120px;">
                                        @if (!string.IsNullOrEmpty(Model.AnhDaiDien))
                                        {
                                            <img src="@Model.AnhDaiDien" alt="Ảnh đại diện" class="img-fluid rounded" style="max-height: 100px;" />
                                        }
                                        else
                                        {
                                            <span class="text-muted">Chưa có ảnh</span>
                                        }
                                    </div>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="mb-4">
                                    <label asp-for="DiaChi" class="form-label fw-semibold">Địa chỉ</label>
                                    <textarea asp-for="DiaChi" class="form-control rounded-3" rows="3"></textarea>
                                    <span asp-validation-for="DiaChi" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-lg-6">
                                <div class="mb-4">
                                    <label asp-for="TaiKhoan" class="form-label fw-semibold">Tài khoản đăng nhập <span class="text-danger">*</span></label>
                                    <input asp-for="TaiKhoan" class="form-control form-control-lg rounded-3" />
                                    <span asp-validation-for="TaiKhoan" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-lg-6">
                                <div class="mb-4">
                                    <label asp-for="MatKhau" class="form-label fw-semibold">Mật khẩu mới</label>
                                    <input asp-for="MatKhau" class="form-control form-control-lg rounded-3" type="password" placeholder="Bỏ trống nếu giữ nguyên mật khẩu cũ" />
                                    <span asp-validation-for="MatKhau" class="text-danger"></span>
                                    <small class="text-muted fst-italic">* Chỉ nhập nếu bạn muốn đổi mật khẩu</small>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-4 mt-5 pt-4 border-top">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-5 rounded-pill">
                                <i class="fa-solid fa-ban me-2"></i>Hủy bỏ
                            </a>
                            <button type="submit" class="btn btn-warning btn-lg px-5 rounded-pill shadow-sm text-white">
                                <i class="fa-solid fa-pen-to-square me-3"></i>Cập nhật
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .bg-gradient-warning {
            background: linear-gradient(135deg, #f0ad4e, #ec971f) !important;
        }

        .form-control-lg {
            border-radius: 12px;
            padding: 0.8rem 1.3rem;
            font-size: 1.1rem;
        }

        .form-label {
            font-weight: 600;
            color: #265077;
        }
    </style>
}