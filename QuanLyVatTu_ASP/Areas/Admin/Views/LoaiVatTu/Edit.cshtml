@model QuanLyVatTu_ASP.Areas.Admin.ViewModels.LoaiVatTu.LoaiVatTuCreateEditViewModel
@{
    ViewData["Title"] = "Cập nhật";
    Layout = "_AdminLayout";
}

<div class="container-fluid py-5">
    <div class="row justify-content-center">
        <div class="col-xxl-8 col-xl-9">
            <div class="card border-0 shadow-lg rounded-4">
                <div class="card-header bg-gradient-primary text-white py-4 px-5">
                    <h3 class="mb-0 fw-bold">
                        <i class="fa-solid fa-tags me-3"></i> Tạo loại vật tư mới
                    </h3>
                </div>
                <div class="card-body p-5">
                    <form asp-route="them-moi" method="post">
                        @Html.AntiForgeryToken()

                        <div class="row g-4">
                            <div class="col-lg-8">
                                <div class="mb-4">
                                    <label class="form-label fw-semibold">Tên loại vật tư <span class="text-danger">*</span></label>
                                    <input asp-for="TenLoaiVatTu" class="form-control form-control-lg rounded-3" required />
                                    <span asp-validation-for="TenLoaiVatTu" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="mb-4">
                                    <label class="form-label fw-semibold">Mã loại</label>
                                    <input type="text" class="form-control form-control-lg bg-light" value="@Model.MaHienThi" disabled />
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="mb-4">
                                    <label class="form-label fw-semibold">Mô tả</label>
                                    <textarea asp-for="MoTa" class="form-control rounded-3" rows="4" placeholder="Mô tả chi tiết về loại vật tư này..."></textarea>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-4 mt-5 pt-4 border-top">
                            <a asp-route="" class="btn btn-outline-secondary btn-lg px-5 rounded-pill">
                                <i class="fa-solid fa-ban me-2"></i>Hủy bỏ
                            </a>
                            <button type="submit" class="btn btn-success btn-lg px-5 rounded-pill shadow-sm">
                                <i class="fa-solid fa-save me-3"></i>Cập nhật
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .bg-gradient-primary {
            background: linear-gradient(135deg, #265077, #1e4258) !important;
        }

        .form-control-lg, .form-select-lg {
            border-radius: 12px;
            padding: 0.8rem 1.3rem;
            font-size: 1.1rem;
        }

        .form-label {
            font-weight: 600;
            color: #265077;
        }
    </style>
}