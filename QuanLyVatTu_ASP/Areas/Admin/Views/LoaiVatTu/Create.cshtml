@model QuanLyVatTu_ASP.Areas.Admin.ViewModels.LoaiVatTu.LoaiVatTuCreateEditViewModel
@{
    ViewData["Title"] = "Tạo loại vật tư mới";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid py-5">
    <div class="row justify-content-center">
        <div class="col-12">
            <div class="card border-0 shadow-lg rounded-4">
                <div class="card-header bg-gradient-primary text-white py-4 px-5">
                    <h3 class="mb-0 fw-bold">
                        <i class="fa-solid fa-tags me-3"></i> Tạo loại vật tư mới
                    </h3>
                </div>
                <div class="card-body p-5">
                    <form asp-action="Create" asp-controller="LoaiVatTu" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3" role="alert"></div>

                        <div class="row g-4">
                            <div class="col-md-3">
                                <div class="mb-4">
                                    <label class="form-label fw-semibold">Mã loại</label>
                                    <input type="text" class="form-control form-control-lg bg-light" value="@Model.MaHienThi" disabled />
                                    <small class="text-muted fst-italic">* Tự động tạo</small>
                                </div>
                            </div>
                            <div class="col-md-9">
                                <div class="mb-4">
                                    <label class="form-label fw-semibold">Tên loại vật tư <span class="text-danger">*</span></label>
                                    <input asp-for="TenLoaiVatTu" class="form-control form-control-lg rounded-3" placeholder="Nhập tên loại..." required />
                                    <span asp-validation-for="TenLoaiVatTu" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="mb-4">
                                    <label class="form-label fw-semibold">Mô tả</label>
                                    <textarea asp-for="MoTa" class="form-control rounded-3" rows="5" placeholder="Mô tả chi tiết về loại vật tư này..."></textarea>
                                    <span asp-validation-for="MoTa" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-4 mt-5 pt-4 border-top">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-5 rounded-pill">
                                <i class="fa-solid fa-ban me-2"></i>Hủy bỏ
                            </a>
                            <button type="submit" class="btn btn-success btn-lg px-5 rounded-pill shadow-sm">
                                <i class="fa-solid fa-save me-3"></i>Tạo loại vật tư
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .bg-gradient-primary {
            background: linear-gradient(135deg, #265077, #1e4258) !important;
        }

        .form-control-lg {
            border-radius: 12px;
            padding: 0.8rem 1.3rem;
            font-size: 1.1rem;
        }

        .form-label {
            font-weight: 600;
            color: #265077;
        }
    </style>
}