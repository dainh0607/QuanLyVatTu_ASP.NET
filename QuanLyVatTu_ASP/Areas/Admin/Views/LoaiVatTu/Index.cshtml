@model QuanLyVatTu_ASP.Areas.Admin.ViewModels.Admin.LoaiVatTu.LoaiVatTuIndexViewModel
@{
    ViewData["Title"] = "Quản lý Loại Vật Tư";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid py-4">
    <div class="card shadow-sm mb-4 border-0 rounded-4 overflow-hidden">
        <div class="card-body py-3">
            <div class="row align-items-center g-3">
                <div class="col-lg-8">
                    <form asp-action="Index" asp-controller="LoaiVatTu" method="get" class="d-flex gap-2">
                        <div class="position-relative flex-grow-1">
                            <input type="text" class="form-control ps-5 rounded-3"
                                   placeholder="Tìm tên loại, mô tả..."
                                   name="keyword" value="@ViewBag.Keyword">
                            <i class="bi bi-search position-absolute top-50 start-3 translate-middle-y text-muted"></i>
                        </div>
                        <button type="submit" class="btn btn-primary rounded-pill px-4">Tìm</button>
                    </form>
                </div>
                <div class="col-lg-4 text-lg-end">
                    <a asp-action="Create" asp-controller="LoaiVatTu" class="btn btn-glass btn-glass-success rounded-pill px-4">
                        <i class="bi bi-plus-lg me-1"></i> Thêm mới
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0 rounded-4 overflow-hidden">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0 align-middle">
                    <thead class="bg-light">
                        <tr>
                            <th width="50" class="text-center">#</th>
                            <th>Mã loại</th>
                            <th>Tên loại vật tư</th>
                            <th>Mô tả</th>
                            <th class="text-center">Số lượng VT</th>
                            <th>Ngày tạo</th>
                            <th width="120" class="text-center">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Items.Any())
                        {
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td class="text-center text-muted">@item.ID</td>
                                    <td><strong>@item.MaHienThi</strong></td>
                                    <td class="fw-bold text-primary">@item.TenLoaiVatTu</td>
                                    <td>
                                        <span class="d-inline-block text-truncate" style="max-width: 250px;">
                                            @(string.IsNullOrWhiteSpace(item.MoTa) ? "—" : item.MoTa)
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        @if (item.SoLuongVatTu > 0)
                                        {
                                            <span class="badge bg-info text-dark rounded-pill px-3">@item.SoLuongVatTu sản phẩm</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary rounded-pill px-3">Trống</span>
                                        }
                                    </td>
                                    <td>@item.NgayTao.ToString("dd/MM/yyyy")</td>
                                    <td class="text-center">
                                        <div class="d-flex justify-content-center gap-2">
                                            <a asp-action="Edit" asp-controller="LoaiVatTu" asp-route-id="@item.ID"
                                               class="btn btn-glass btn-glass-warning btn-sm rounded-pill px-3" title="Sửa">
                                                <i class="bi bi-pencil"></i>
                                            </a>

                                            <form asp-action="Delete" asp-controller="LoaiVatTu" asp-route-id="@item.ID" method="post"
                                                  onsubmit="return confirm('Bạn có chắc chắn muốn xóa loại vật tư: @item.TenLoaiVatTu?\nHành động này không thể hoàn tác!');">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-glass btn-glass-danger btn-sm rounded-pill px-3" title="Xóa">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center py-5 text-muted">
                                    <i class="bi bi-folder2-open display-4 d-block mb-3"></i>
                                    Không tìm thấy dữ liệu phù hợp
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (Model.TotalPages > 1)
            {
                <div class="card-footer bg-white d-flex justify-content-between align-items-center py-3 border-0">
                    <div class="text-muted small">
                        Trang <strong>@Model.PageIndex</strong> / @Model.TotalPages
                    </div>
                    <nav>
                        <ul class="pagination pagination-sm mb-0">
                            <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                                <a class="page-link rounded-start-pill" asp-action="Index" asp-route-page="@(Model.PageIndex - 1)" asp-route-keyword="@ViewBag.Keyword">Trước</a>
                            </li>

                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                                    <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-keyword="@ViewBag.Keyword">@i</a>
                                </li>
                            }

                            <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                                <a class="page-link rounded-end-pill" asp-action="Index" asp-route-page="@(Model.PageIndex + 1)" asp-route-keyword="@ViewBag.Keyword">Sau</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            }
        </div>
    </div>
</div>