@model QuanLyVatTu_ASP.Areas.Admin.ViewModels.HoaDonViewModel
@{
    ViewData["Title"] = "Quản lý xuất hóa đơn";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid py-4">
    <div class="card shadow-sm mb-4 border-0 rounded-4 overflow-hidden">
        <div class="card-body py-3">
            <div class="row align-items-center g-3">
                <div class="col-lg-8">
                    <form asp-action="Index" asp-controller="HoaDon" method="get" class="d-flex gap-2">
                        <div class="position-relative flex-grow-1">
                            <input type="text" class="form-control ps-5 rounded-3"
                                   placeholder="Tìm mã đơn, tên khách hàng..."
                                   name="keyword" value="@ViewBag.Keyword">
                            <i class="bi bi-search position-absolute top-50 ms-2 translate-middle-y text-muted"></i>
                        </div>
                        <button type="submit" class="btn btn-primary rounded-pill px-4">Tìm</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0 rounded-4 overflow-hidden">
        <div class="card-header bg-white py-3">
            <h5 class="mb-0 fw-bold text-primary"><i class="bi bi-receipt-cutoff me-2"></i>Quản lý xuất hóa đơn</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Mã ĐH</th>
                            <th>Khách hàng</th>
                            <th>Ngày đặt</th>
                            <th class="text-end">Tổng tiền</th>
                            <th class="text-center">Đã cọc</th>
                            <th class="text-center">Trạng thái</th>
                            <th class="text-center">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Orders.Any())
                        {
                            @foreach (var item in Model.Orders)
                            {
                                <tr>
                                    <td class="ps-4 fw-bold">@item.MaDonHang</td>
                                    <td>@item.TenKhachHang</td>
                                    <td>@item.NgayDat.ToString("dd/MM/yyyy")</td>
                                    <td class="text-end fw-bold">@item.TongTien.ToString("N0")</td>
                                    <td class="text-center">
                                        @if (item.TyLeCoc >= 10)
                                        {
                                            <span class="badge bg-success bg-opacity-10 text-success px-3 rounded-pill">
                                                @item.TyLeCoc.ToString("N0")%
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger bg-opacity-10 text-danger px-3 rounded-pill" title="Yêu cầu tối thiểu 10%">
                                                @item.TyLeCoc.ToString("N0")%
                                            </span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        @if (item.HoaDonId != null)
                                        {
                                            <span class="badge bg-primary px-3 rounded-pill">Đã xuất HĐ</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary px-3 rounded-pill">Chưa xuất</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="d-flex justify-content-center align-items-center gap-3">
                                            @if (item.HoaDonId != null)
                                            {
                                                <!-- Edit (Placeholder) -->
                                                <a href="#" class="btn btn-link p-0 text-decoration-none" title="Chỉnh sửa (Chưa hỗ trợ)" onclick="alert('Tính năng chỉnh sửa hóa đơn đang phát triển'); return false;">
                                                    <i class="bi bi-pencil" style="color: #0d6efd; font-size: 1.1rem;"></i>
                                                </a>

                                                <!-- View -->
                                                <a asp-action="Details" asp-route-id="@item.HoaDonId" 
                                                   class="btn btn-link p-0 text-decoration-none" title="Xem chi tiết">
                                                    <i class="bi bi-eye" style="color: #6c757d; font-size: 1.1rem;"></i>
                                                </a>

                                                <!-- Delete (Placeholder) -->
                                                <a href="#" class="btn btn-link p-0 text-decoration-none" title="Xóa (Chưa hỗ trợ)" onclick="alert('Tính năng xóa hóa đơn đang phát triển'); return false;">
                                                    <i class="bi bi-trash" style="color: #dc3545; font-size: 1.1rem;"></i>
                                                </a>
                                            }
                                            else
                                            {
                                                <!-- Export Action for non-invoiced items -->
                                                @if (item.DuDieuKienXuat)
                                                {
                                                    <form asp-action="CreateInvoice" asp-route-id="@item.DonHangId" method="post"
                                                          onsubmit="return confirm('Xác nhận xuất hóa đơn cho đơn @item.MaDonHang?');" 
                                                          style="display:inline;">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="btn btn-link p-0 text-decoration-none border-0 bg-transparent" title="Xuất Hóa Đơn">
                                                            <i class="bi bi-printer" style="color: #198754; font-size: 1.2rem;"></i>
                                                        </button>
                                                    </form>
                                                }
                                                else
                                                {
                                                    <button class="btn btn-link p-0 text-decoration-none border-0 bg-transparent" disabled title="Khách chưa cọc đủ 10%">
                                                        <i class="bi bi-lock" style="color: #adb5bd; font-size: 1.1rem;"></i>
                                                    </button>
                                                }
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center py-5 text-muted">
                                    <i class="bi bi-inbox display-4 d-block mb-3"></i>
                                    Không tìm thấy đơn hàng nào cần xuất hóa đơn
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (Model.TotalPages > 1)
            {
                <div class="card-footer bg-white d-flex justify-content-between align-items-center py-4 border-0">
                    <div class="text-muted small">
                        Hiển thị @(Model.Orders.Any() ? (Model.PageIndex - 1) * Model.PageSize + 1 : 0)
                        đến @(Math.Min(Model.PageIndex * Model.PageSize, Model.TotalRecords))
                        trong tổng <strong>@Model.TotalRecords</strong> bản ghi
                    </div>

                    <div class="d-flex align-items-center">
                        <span class="me-2 fw-bold text-dark">Trang:</span>
                        
                        <nav>
                            <ul class="pagination pagination-modern mb-0">
                                <li class="page-item @(Model.PageIndex == 1 ? "disabled" : "")">
                                    <a class="page-link" asp-action="Index" asp-route-page="@(Model.PageIndex - 1)" asp-route-keyword="@ViewBag.Keyword">
                                        <i class="fa-solid fa-chevron-left"></i> </a>
                                </li>

                                @for (int i = 1; i <= Model.TotalPages; i++)
                                {
                                    <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                                        <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-keyword="@ViewBag.Keyword">@i</a>
                                    </li>
                                }

                                <li class="page-item @(Model.PageIndex == Model.TotalPages ? "disabled" : "")">
                                    <a class="page-link" asp-action="Index" asp-route-page="@(Model.PageIndex + 1)" asp-route-keyword="@ViewBag.Keyword">
                                        <i class="fa-solid fa-chevron-right"></i> </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

