@model QuanLyVatTu_ASP.Areas.Admin.ViewModels.NhanVien.NhanVienCreateEditViewModel
@{
    ViewData["Title"] = "Cập nhật nhân viên";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid py-5">
    <div class="row justify-content-center">
        <div class="col-xxl-9 col-xl-10">
            <div class="card border-0 shadow-lg rounded-4">
                <div class="card-header bg-gradient-warning text-white py-4 px-5">
                    <h3 class="mb-0 fw-bold">
                        <i class="fa-solid fa-user-pen me-3"></i> Cập nhật nhân viên
                    </h3>
                </div>
                <div class="card-body p-5">
                    <form asp-action="Edit" asp-controller="NhanVien" asp-route-id="@Model.Id" method="post" class="needs-validation" enctype="multipart/form-data" novalidate>
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="AnhDaiDien" />

                        <div class="row g-4">
                            <div class="col-lg-6">
                                <div class="mb-4">
                                    <label class="form-label fw-semibold">Mã nhân viên</label>
                                    <input type="text" class="form-control form-control-lg bg-light" value="@Model.MaHienThi" disabled />
                                </div>

                                <div class="mb-4">
                                    <label class="form-label fw-semibold">Họ và tên <span class="text-danger">*</span></label>
                                    <input asp-for="HoTen" class="form-control form-control-lg rounded-3" required />
                                    <span asp-validation-for="HoTen" class="text-danger small"></span>
                                </div>

                                <div class="mb-4">
                                    <label class="form-label fw-semibold">Ngày sinh <span class="text-danger">*</span></label>
                                    <input asp-for="NgaySinh" class="form-control form-control-lg rounded-3" type="date" required />
                                    <span asp-validation-for="NgaySinh" class="text-danger small"></span>
                                </div>

                                <div class="mb-4">
                                    <label class="form-label fw-semibold">CCCD <span class="text-danger">*</span></label>
                                    <input asp-for="CCCD" class="form-control form-control-lg rounded-3" maxlength="12" required />
                                    <span asp-validation-for="CCCD" class="text-danger small"></span>
                                </div>

                                <div class="mb-4">
                                    <label class="form-label fw-semibold">Số điện thoại <span class="text-danger">*</span></label>
                                    <input asp-for="SoDienThoai" class="form-control form-control-lg rounded-3" required />
                                    <span asp-validation-for="SoDienThoai" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-lg-6">
                                <div class="mb-4">
                                    <label class="form-label fw-semibold">Email</label>
                                    <input asp-for="Email" class="form-control form-control-lg rounded-3" type="email" />
                                    <span asp-validation-for="Email" class="text-danger small"></span>
                                </div>

                                <div class="mb-4">
                                    <label class="form-label fw-semibold">Tài khoản đăng nhập <span class="text-danger">*</span></label>
                                    <input asp-for="TaiKhoan" class="form-control form-control-lg rounded-3" required />
                                    <span asp-validation-for="TaiKhoan" class="text-danger small"></span>
                                </div>

                                <div class="mb-4">
                                    <label class="form-label fw-semibold">Mật khẩu mới</label>
                                    <input asp-for="MatKhau" class="form-control form-control-lg rounded-3" type="password" placeholder="Bỏ trống nếu không đổi" />
                                    <span asp-validation-for="MatKhau" class="text-danger small"></span>
                                    <small class="text-muted fst-italic">* Chỉ nhập nếu muốn đổi mật khẩu</small>
                                </div>

                                <div class="mb-4">
                                    <label class="form-label fw-semibold">Vai trò <span class="text-danger">*</span></label>
                                    <select asp-for="VaiTro" class="form-select form-select-lg rounded-3" required>
                                        <option value="">-- Chọn vai trò --</option>
                                        <option value="Quản trị">Quản trị</option>
                                        <option value="Nhân viên">Nhân viên</option>
                                        <option value="Kế toán">Kế toán</option>
                                        <option value="Thủ kho">Thủ kho</option>
                                    </select>
                                    <span asp-validation-for="VaiTro" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-lg-6">
                                <div class="mb-4">
                                    <label asp-for="AnhDaiDienFile" class="form-label fw-semibold">Ảnh đại diện</label>
                                    <input asp-for="AnhDaiDienFile" class="form-control form-control-sm rounded-3" type="file" accept="image/*" />
                                    <small class="text-muted">Chọn ảnh mới để thay thế</small>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="mb-4">
                                    <label class="form-label fw-semibold">Ảnh hiện tại</label>
                                    <div class="border rounded-3 p-2 d-flex align-items-center justify-content-center bg-light" style="height: 120px;">
                                        @if (!string.IsNullOrEmpty(Model.AnhDaiDien))
                                        {
                                            <img src="@Model.AnhDaiDien" alt="Ảnh đại diện" class="img-fluid rounded" style="max-height: 100px;" />
                                        }
                                        else
                                        {
                                            <span class="text-muted">Chưa có ảnh</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-4 mt-5 pt-4 border-top">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-5 rounded-pill">
                                <i class="fa-solid fa-ban me-2"></i>Hủy bỏ
                            </a>
                            <button type="submit" class="btn btn-warning btn-lg px-5 rounded-pill shadow-sm text-white">
                                <i class="fa-solid fa-save me-3"></i>Cập nhật
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .bg-gradient-warning {
            background: linear-gradient(135deg, #f0ad4e, #ec971f) !important;
        }

        .form-control-lg, .form-select-lg {
            border-radius: 12px;
            padding: 0.8rem 1.3rem;
            font-size: 1.1rem;
        }

        .form-label {
            font-weight: 600;
            color: #265077;
        }
    </style>
}