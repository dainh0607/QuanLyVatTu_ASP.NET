@model QuanLyVatTu_ASP.Areas.Admin.ViewModels.NhanVien.NhanVienIndexViewModel
@{
    ViewData["Title"] = "Quản lý Nhân Viên";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid py-4">
    <div class="card shadow-sm mb-4 border-0 rounded-4 overflow-hidden">
        <div class="card-body py-3">
            <div class="row align-items-center g-3">
                <div class="col-lg-8">
                    <form asp-action="Index" asp-controller="NhanVien" method="get" class="d-flex gap-2">
                        <div class="position-relative flex-grow-1">
                            <input type="text" class="form-control ps-5 rounded-3"
                                   placeholder="Tìm tên, CCCD, vai trò..."
                                   name="keyword" value="@ViewBag.Keyword">
                            <i class="bi bi-search position-absolute top-50 start-3 translate-middle-y text-muted"></i>
                        </div>
                        <button type="submit" class="btn btn-primary rounded-pill px-4">Tìm</button>
                    </form>
                </div>
                <div class="col-lg-4 text-lg-end">
                    <a asp-action="Create" asp-controller="NhanVien" class="btn btn-success rounded-pill px-4 shadow-sm">
                        <i class="bi bi-person-plus-fill me-1"></i> Thêm mới
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0 rounded-4 overflow-hidden">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0 align-middle">
                    <thead class="bg-light">
                        <tr>
                            <th width="50" class="text-center">#</th>
                            <th>Mã NV</th>
                            <th>Họ tên</th>
                            <th>Ngày sinh</th>
                            <th>CCCD</th>
                            <th>Liên hệ</th>
                            <th>Vai trò</th>
                            <th>Ngày tạo</th>
                            <th width="120" class="text-center">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Items.Any())
                        {
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td class="text-center text-muted">@item.ID</td>
                                    <td><strong>@item.MaHienThi</strong></td>
                                    <td class="fw-bold text-primary">@item.HoTen</td>
                                    <td>@item.NgaySinh.ToString("dd/MM/yyyy")</td>
                                    <td>@item.CCCD</td>
                                    <td>
                                        <div><i class="bi bi-telephone me-1 text-muted"></i> @item.SoDienThoai</div>
                                        @if (!string.IsNullOrEmpty(item.Email))
                                        {
                                            <div class="small text-muted"><i class="bi bi-envelope me-1"></i> @item.Email</div>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge @(item.VaiTro == "Quản trị" ? "bg-danger" : "bg-primary") rounded-pill px-3">
                                            @item.VaiTro
                                        </span>
                                    </td>
                                    <td>@item.NgayTao.ToString("dd/MM/yyyy")</td>
                                    <td class="text-center">
                                        <div class="d-flex justify-content-center gap-2">
                                            <a asp-action="Edit" asp-controller="NhanVien" asp-route-id="@item.ID"
                                               class="btn btn-outline-warning btn-sm text-black me-1" title="Sửa">
                                                <i class="bi bi-pencil"></i>
                                            </a>

                                            <form asp-action="Delete" asp-controller="NhanVien" asp-route-id="@item.ID" method="post"
                                                  onsubmit="return confirm('Bạn có chắc muốn xóa nhân viên: @item.HoTen?');">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-outline-danger btn-sm text-black me-1" title="Xóa">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="9" class="text-center py-5 text-muted">
                                    <i class="bi bi-people display-4 d-block mb-3"></i>
                                    Không tìm thấy dữ liệu phù hợp
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (Model.TotalPages > 1)
            {
                <div class="card-footer bg-white d-flex justify-content-between align-items-center py-4 border-0">
                    <div class="text-muted small">
                        Hiển thị @(Model.Items.Any() ? (Model.PageIndex - 1) * Model.PageSize + 1 : 0)
                        đến @(Math.Min(Model.PageIndex * Model.PageSize, Model.TotalRecords))
                        trong tổng <strong>@Model.TotalRecords</strong> bản ghi
                    </div>

                    <div class="d-flex align-items-center">
                        <span class="me-2 fw-bold text-dark">Trang:</span>
                        
                        <nav>
                            <ul class="pagination pagination-modern mb-0">
                                <li class="page-item @(Model.PageIndex == 1 ? "disabled" : "")">
                                    <a class="page-link" asp-action="Index" asp-route-page="@(Model.PageIndex - 1)" asp-route-keyword="@ViewBag.Keyword">
                                        <i class="fa-solid fa-chevron-left"></i> </a>
                                </li>

                                @for (int i = 1; i <= Model.TotalPages; i++)
                                {
                                    <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                                        <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-keyword="@ViewBag.Keyword">@i</a>
                                    </li>
                                }

                                <li class="page-item @(Model.PageIndex == Model.TotalPages ? "disabled" : "")">
                                    <a class="page-link" asp-action="Index" asp-route-page="@(Model.PageIndex + 1)" asp-route-keyword="@ViewBag.Keyword">
                                        <i class="fa-solid fa-chevron-right"></i> </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            }
        </div>
    </div>
</div>