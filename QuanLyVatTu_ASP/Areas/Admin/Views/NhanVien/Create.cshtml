@model QuanLyVatTu_ASP.Areas.Admin.ViewModels.NhanVien.NhanVienCreateEditViewModel
@{
    ViewData["Title"] = "Tạo nhân viên mới";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid py-5">
    <div class="row justify-content-center">
        <div class="col-12">
            <div class="card border-0 shadow-lg rounded-4">
                <div class="card-header bg-gradient-primary text-white py-4 px-5">
                    <h3 class="mb-0 fw-bold">
                        <i class="fa-solid fa-user-plus me-3"></i> Tạo nhân viên mới
                    </h3>
                </div>
                <div class="card-body p-5">
                    <form asp-action="Create" asp-controller="NhanVien" method="post" class="needs-validation" enctype="multipart/form-data" novalidate>
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3" role="alert"></div>

                        <div class="row g-4">
                            <!-- Row 1: Personal Info -->
                            <div class="col-md-4">
                                <div class="mb-4">
                                    <label class="form-label fw-semibold">Họ và tên <span class="text-danger">*</span></label>
                                    <input asp-for="HoTen" class="form-control form-control-lg rounded-3" placeholder="Nhập họ tên..." required />
                                    <span asp-validation-for="HoTen" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="mb-4">
                                    <label class="form-label fw-semibold">Ngày sinh <span class="text-danger">*</span></label>
                                    <input asp-for="NgaySinh" class="form-control form-control-lg rounded-3" type="date" required />
                                    <span asp-validation-for="NgaySinh" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="mb-4">
                                    <label class="form-label fw-semibold">CCCD <span class="text-danger">*</span></label>
                                    <input asp-for="CCCD" class="form-control form-control-lg rounded-3" maxlength="12" placeholder="Số căn cước..." required />
                                    <span asp-validation-for="CCCD" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="mb-4">
                                    <label class="form-label fw-semibold">Số điện thoại <span class="text-danger">*</span></label>
                                    <input asp-for="SoDienThoai" class="form-control form-control-lg rounded-3" placeholder="Số điện thoại..." required />
                                    <span asp-validation-for="SoDienThoai" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Row 2: Account & Role -->
                            <div class="col-md-4">
                                <div class="mb-4">
                                    <label class="form-label fw-semibold">Email</label>
                                    <input asp-for="Email" class="form-control form-control-lg rounded-3" type="email" placeholder="email@company.com" />
                                    <span asp-validation-for="Email" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="mb-4">
                                    <label class="form-label fw-semibold">Tài khoản <span class="text-danger">*</span></label>
                                    <input asp-for="TaiKhoan" class="form-control form-control-lg rounded-3" placeholder="Username..." required />
                                    <span asp-validation-for="TaiKhoan" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="mb-4">
                                    <label class="form-label fw-semibold">Mật khẩu <span class="text-danger">*</span></label>
                                    <input asp-for="MatKhau" class="form-control form-control-lg rounded-3" type="password" placeholder="Mật khẩu..." required />
                                    <span asp-validation-for="MatKhau" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="mb-4">
                                    <label class="form-label fw-semibold">Vai trò <span class="text-danger">*</span></label>
                                    <select asp-for="VaiTro" class="form-select form-select-lg rounded-3" required>
                                        <option value="">-- Chọn --</option>
                                        <option value="Quản trị">Quản trị</option>
                                        <option value="Nhân viên">Nhân viên</option>
                                        <option value="Kế toán">Kế toán</option>
                                        <option value="Thủ kho">Thủ kho</option>
                                    </select>
                                    <span asp-validation-for="VaiTro" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Row 3: Avatar -->
                            <div class="col-md-6">
                                <div class="mb-4">
                                    <label asp-for="AnhDaiDienFile" class="form-label fw-semibold">Ảnh đại diện</label>
                                    <input asp-for="AnhDaiDienFile" class="form-control form-control-sm rounded-3" type="file" accept="image/*" />
                                    <small class="text-muted">Chấp nhận JPG, PNG, GIF - Tối đa 5MB</small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-4">
                                    <label class="form-label fw-semibold">Xem trước</label>
                                    <div id="imagePreview" class="border rounded-3 p-2 d-flex align-items-center justify-content-center bg-light" style="height: 100px;">
                                        <span class="text-muted">Chưa có ảnh</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-4 mt-5 pt-4 border-top">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-5 rounded-pill">
                                <i class="fa-solid fa-ban me-2"></i>Hủy bỏ
                            </a>
                            <button type="submit" class="btn btn-success btn-lg px-5 rounded-pill shadow-sm">
                                <i class="fa-solid fa-save me-3"></i>Tạo nhân viên
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .bg-gradient-primary {
            background: linear-gradient(135deg, #265077, #1e4258) !important;
        }

        .form-control-lg, .form-select-lg {
            border-radius: 12px;
            padding: 0.8rem 1.3rem;
            font-size: 1.1rem;
        }

        .form-label {
            font-weight: 600;
            color: #265077;
        }
    </style>
}